---
import Layout from '../layouts/Layout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Nieuws | VC HEBO Jeugd">
  <main>
    <PaastoernooiTicker />

    <!-- Masthead -->
    <header class="masthead">
      <a href="/" class="masthead__logo">HEBO JEUGD</a>
      <div class="masthead__issue">
        <span>Issue No.</span>
        <span class="masthead__num">01</span>
      </div>
      <div class="masthead__date">Januari 2026</div>
    </header>

    <!-- Hero Article -->
    <section class="hero">
      <div class="hero__index">01</div>
      <div class="hero__content">
        <div class="hero__category">Evenement</div>
        <h1 class="hero__title">Paastoernooi 2026</h1>
        <p class="hero__subtitle">Drie dagen. Honderden spelers. Eén doel: plezier.</p>
      </div>
      <div class="hero__image">
        <img src="/team-photo.jpg" alt="" />
        <div class="hero__image-caption">7—9 April</div>
      </div>
    </section>

    <!-- Article Grid -->
    <section class="grid">
      <article class="item item--wide">
        <div class="item__index">02</div>
        <div class="item__content">
          <span class="item__category">Club</span>
          <h2 class="item__title">Nieuwe trainings&shy;uren voorjaar</h2>
          <p class="item__excerpt">Betere verdeling, meer speeltijd.</p>
        </div>
        <div class="item__date">15.01</div>
      </article>

      <article class="item">
        <div class="item__index">03</div>
        <div class="item__content">
          <span class="item__category">Terugblik</span>
          <h2 class="item__title">Eindejaars&shy;toernooi</h2>
          <p class="item__excerpt">200+ spelers, 1 weekend.</p>
        </div>
        <div class="item__date">10.01</div>
      </article>

      <article class="item">
        <div class="item__index">04</div>
        <div class="item__content">
          <span class="item__category">Oproep</span>
          <h2 class="item__title">Vrijwilligers gezocht</h2>
          <p class="item__excerpt">Help mee bouwen.</p>
        </div>
        <div class="item__date">05.01</div>
      </article>

      <article class="item item--featured">
        <div class="item__index">05</div>
        <div class="item__content">
          <span class="item__category">Visie</span>
          <h2 class="item__title">Waarom wij anders zijn</h2>
          <p class="item__excerpt">Geen geschreeuw. Geen druk. Wel plezier.</p>
        </div>
        <div class="item__date">02.01</div>
      </article>

      <article class="item item--tall">
        <div class="item__index">06</div>
        <div class="item__content">
          <span class="item__category">2026</span>
          <h2 class="item__title">Plannen voor het nieuwe seizoen</h2>
          <p class="item__excerpt">Infrastructuur. Groei. Samenwerkingen.</p>
        </div>
        <div class="item__date">01.01</div>
      </article>
    </section>

    <!-- Bottom Banner -->
    <section class="banner">
      <div class="banner__text">
        <span>Inschrijvingen</span>
        <span>Paastoernooi</span>
        <span>Nu open →</span>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #fff;
    color: #0a0a0a;
  }

  /* Masthead */
  .masthead {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    border-bottom: 2px solid #0a0a0a;
  }

  .masthead__logo {
    font-size: 1.5rem;
    font-weight: 900;
    letter-spacing: -1px;
    text-decoration: none;
    color: #0a0a0a;
  }

  .masthead__issue {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .masthead__num {
    font-size: 2rem;
    font-weight: 900;
  }

  .masthead__date {
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  /* Hero */
  .hero {
    display: grid;
    grid-template-columns: auto 1fr 1fr;
    border-bottom: 2px solid #0a0a0a;
  }

  .hero__index {
    font-size: 8rem;
    font-weight: 900;
    line-height: 1;
    padding: 2rem;
    border-right: 2px solid #0a0a0a;
    display: flex;
    align-items: center;
    color: #e0e0e0;
  }

  .hero__content {
    padding: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 1rem;
  }

  .hero__category {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #c8202f;
    font-weight: 700;
  }

  .hero__title {
    font-size: clamp(3rem, 8vw, 6rem);
    font-weight: 900;
    line-height: 0.9;
    margin: 0;
    letter-spacing: -3px;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    margin: 0;
    opacity: 0.6;
  }

  .hero__image {
    position: relative;
    border-left: 2px solid #0a0a0a;
  }

  .hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%);
    transition: filter 0.3s;
  }

  .hero__image:hover img {
    filter: grayscale(0%);
  }

  .hero__image-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #c8202f;
    color: #fff;
    padding: 0.75rem;
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 2px;
  }

  /* Grid */
  .grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .item {
    border-right: 2px solid #0a0a0a;
    border-bottom: 2px solid #0a0a0a;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    cursor: pointer;
    transition: background 0.2s, color 0.2s;
    position: relative;
  }

  .item:nth-child(3n) {
    border-right: none;
  }

  .item:hover {
    background: #0a0a0a;
    color: #fff;
  }

  .item:hover .item__category {
    color: #fff;
  }

  .item--wide {
    grid-column: span 2;
  }

  .item--tall {
    grid-row: span 2;
  }

  .item--featured {
    background: #c8202f;
    color: #fff;
  }

  .item--featured .item__category {
    color: #fff;
    opacity: 0.7;
  }

  .item--featured:hover {
    background: #0a0a0a;
  }

  .item__index {
    font-size: 3rem;
    font-weight: 900;
    opacity: 0.15;
    line-height: 1;
  }

  .item__content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .item__category {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #c8202f;
    font-weight: 700;
  }

  .item__title {
    font-size: 1.8rem;
    font-weight: 900;
    line-height: 1;
    margin: 0;
    letter-spacing: -1px;
    hyphens: manual;
  }

  .item--tall .item__title {
    font-size: 2.5rem;
  }

  .item__excerpt {
    font-size: 0.9rem;
    opacity: 0.6;
    margin: 0;
    line-height: 1.4;
  }

  .item__date {
    font-size: 0.8rem;
    font-weight: 700;
    opacity: 0.4;
    margin-top: auto;
  }

  /* Banner */
  .banner {
    background: #0a0a0a;
    color: #fff;
    padding: 2rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .banner:hover {
    background: #c8202f;
  }

  .banner__text {
    display: flex;
    justify-content: center;
    gap: 3rem;
    font-size: 1.2rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .masthead {
      flex-wrap: wrap;
      gap: 1rem;
    }

    .hero {
      grid-template-columns: 1fr;
    }

    .hero__index {
      display: none;
    }

    .hero__image {
      border-left: none;
      border-top: 2px solid #0a0a0a;
      height: 300px;
    }

    .grid {
      grid-template-columns: 1fr;
    }

    .item {
      border-right: none;
    }

    .item--wide,
    .item--tall {
      grid-column: auto;
      grid-row: auto;
    }

    .banner__text {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
  }
</style>
