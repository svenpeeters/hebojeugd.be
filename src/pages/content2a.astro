---
import Layout from '../layouts/Layout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Nieuws | VC HEBO Jeugd">
  <main>
    <PaastoernooiTicker />

    <!-- CHAOS GRID -->
    <section class="chaos">
      <div class="chaos__bg">HEBO</div>
      
      <article class="block block--1">
        <span class="block__num">01</span>
        <h2>PAAS<br/>TOER<br/>NOOI</h2>
        <div class="block__date">7—9 APR</div>
      </article>

      <article class="block block--2">
        <span class="block__label">Club nieuws</span>
        <h3>Nieuwe trainingsuren</h3>
      </article>

      <article class="block block--3">
        <div class="block__big">200+</div>
        <span>spelers eindejaarstoernooi</span>
      </article>

      <article class="block block--4">
        <h3>VRIJWILLIGERS<br/>GEZOCHT</h3>
        <a href="mailto:info@hebojeugd.be">Mail ons →</a>
      </article>

      <article class="block block--5">
        <span class="block__quote">"Geen geschreeuw.<br/>Wel plezier."</span>
      </article>

      <article class="block block--6">
        <span class="block__year">2026</span>
      </article>

      <div class="chaos__circle"></div>
      <div class="chaos__line"></div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #f0f0f0;
    min-height: 100vh;
  }

  .chaos {
    position: relative;
    min-height: 100vh;
    padding: 4rem;
    overflow: hidden;
  }

  .chaos__bg {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 40vw;
    font-weight: 900;
    color: #e8e8e8;
    pointer-events: none;
    white-space: nowrap;
  }

  .chaos__circle {
    position: absolute;
    width: 300px;
    height: 300px;
    border: 3px solid #c8202f;
    border-radius: 50%;
    top: 20%;
    right: 10%;
    animation: spin 20s linear infinite;
  }

  .chaos__line {
    position: absolute;
    width: 2px;
    height: 80vh;
    background: #1e3264;
    top: 10%;
    left: 30%;
    transform: rotate(15deg);
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  .block {
    position: absolute;
    background: #fff;
    padding: 2rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }

  .block:hover {
    transform: scale(1.05) rotate(-2deg);
    z-index: 100;
  }

  .block__num {
    font-size: 0.7rem;
    letter-spacing: 3px;
    opacity: 0.4;
    display: block;
    margin-bottom: 1rem;
  }

  .block h2 {
    font-size: 4rem;
    font-weight: 900;
    line-height: 0.85;
    margin: 0;
  }

  .block h3 {
    font-size: 1.5rem;
    font-weight: 800;
    margin: 0;
  }

  .block__date {
    margin-top: 1rem;
    font-weight: 700;
    color: #c8202f;
  }

  .block__label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #c8202f;
    display: block;
    margin-bottom: 0.5rem;
  }

  .block__big {
    font-size: 6rem;
    font-weight: 900;
    line-height: 1;
    color: #1e3264;
  }

  .block__quote {
    font-size: 1.5rem;
    font-style: italic;
    line-height: 1.4;
  }

  .block__year {
    font-size: 8rem;
    font-weight: 900;
    line-height: 1;
    -webkit-text-stroke: 3px #1e3264;
    color: transparent;
  }

  .block--1 {
    top: 10%;
    left: 5%;
    background: #1e3264;
    color: #fff;
    transform: rotate(-3deg);
  }

  .block--1:hover {
    transform: scale(1.05) rotate(0deg);
  }

  .block--2 {
    top: 15%;
    right: 20%;
    transform: rotate(2deg);
  }

  .block--3 {
    top: 45%;
    left: 15%;
    transform: rotate(-1deg);
  }

  .block--4 {
    top: 50%;
    right: 5%;
    background: #c8202f;
    color: #fff;
    transform: rotate(3deg);
  }

  .block--4 a {
    color: #fff;
    text-decoration: none;
    display: block;
    margin-top: 1rem;
  }

  .block--4:hover {
    transform: scale(1.05) rotate(0deg);
  }

  .block--5 {
    bottom: 15%;
    left: 35%;
    background: #f5f5f5;
    border: 2px solid #1e3264;
    transform: rotate(-2deg);
  }

  .block--6 {
    bottom: 10%;
    right: 25%;
    background: transparent;
    box-shadow: none;
  }

  @media (max-width: 900px) {
    .chaos {
      padding: 2rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .block {
      position: relative;
      transform: none !important;
      top: auto !important;
      left: auto !important;
      right: auto !important;
      bottom: auto !important;
    }

    .block:hover {
      transform: translateX(10px) !important;
    }

    .chaos__bg,
    .chaos__circle,
    .chaos__line {
      display: none;
    }
  }
</style>
