    align-items: center;
    gap: 0.5rem;
    padding: 0 1rem;
    color: #fff;
  }

  .ticker__team {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #c8202f;
    background: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .ticker__badge {
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.5;
  }

  .ticker__match {
    font-size: 1rem;
    font-weight: 600;
  }

  .ticker__date {
    font-size: 0.85rem;
    opacity: 0.5;
  }

  .ticker__divider {
    font-size: 0.5rem;
    opacity: 0.3;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero__container {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .hero__content {
      padding: 6rem 2rem 3rem;
      text-align: center;
    }

    .hero__visual {
      padding: 3rem 2rem 6rem;
    }

    .hero__logo {
      width: 200px;
    }

