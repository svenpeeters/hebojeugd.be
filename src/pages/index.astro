    letter-spacing: 3px;
    opacity: 0.5;
    margin-bottom: 3rem;
  }

  .locations__grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  .location-card {
    padding: 3rem;
    border: 1px solid rgba(255,255,255,0.2);
    background: rgba(255,255,255,0.05);
    text-decoration: none;
    color: #fff;
