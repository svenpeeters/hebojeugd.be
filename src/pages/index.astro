    opacity: 0.4;
    pointer-events: none;
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(10,15,26,0.6) 0%, rgba(30,50,100,0.5) 100%);
    pointer-events: none;
  }

  .hero > * {
    position: relative;
    z-index: 1;
  }

  .hero__container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 4rem 0;
