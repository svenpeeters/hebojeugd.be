    transition: transform 0.3s ease;
  }

  .cta__button:hover .cta__arrow {
    transform: translateX(5px);
  }

  /* Footer */
  .footer {
    background: #141f3d;
    color: #fff;
    padding: 8rem 8vw 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 4rem;
    padding-bottom: 6rem;
    border-bottom: 1px solid #222;
    max-width: 1440px;
    margin: 0 auto;
  }

  .footer__col h4 {
