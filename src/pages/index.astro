---
import Layout from '../layouts/Layout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import matches from '../data/matches.json';

// Get all upcoming matches for ticker
const upcomingMatches = matches;

// Get weekend matches (Saturday + Sunday of the first match's weekend)
const firstMatchDate = new Date(matches[0]?.date);
const saturday = new Date(firstMatchDate);
saturday.setDate(firstMatchDate.getDate() - firstMatchDate.getDay() + 6); // Get Saturday
const sunday = new Date(saturday);
sunday.setDate(saturday.getDate() + 1); // Get Sunday

const weekendMatches = matches.filter(m => {
  const d = new Date(m.date);
  const dateStr = d.toISOString().split('T')[0];
  const satStr = saturday.toISOString().split('T')[0];
  const sunStr = sunday.toISOString().split('T')[0];
  return dateStr === satStr || dateStr === sunStr;
});
---

<Layout title="VC HEBO Jeugd">
  <main>
    <!-- Paastoernooi Promo -->
    <PaastoernooiTicker />

    <!-- Hero Section -->
    <section class="hero">
      <div class="hero__container">
        <div class="hero__content">
          <div class="hero__eyebrow">Est. 2024 — Heers × Eendracht Mechelen-Bovelingen</div>
          <h1 class="hero__title">
            <span class="hero__line">Limburgse roots.</span>
            <span class="hero__line hero__line--accent">Grenzeloos talent.</span>
          </h1>
        </div>
        <div class="hero__visual">
          <div class="hero__logo-container">
            <img src="/logo.png" alt="HEBO Jeugd" class="hero__logo" />
          </div>
        </div>
      </div>
      <div class="hero__scroll">
        <span>Scroll</span>
        <div class="hero__scroll-line"></div>
      </div>
    </section>

    <!-- Manifesto Section -->
    <section class="manifesto">
      <div class="manifesto__container">
        <div class="manifesto__text">
          <span class="manifesto__highlight">Vergeet alles</span> wat je weet over jeugdvoetbal.<br>
          Geen ouders die schreeuwen langs de lijn.<br>
          Geen trainers die winnen belangrijker vinden dan groeien.<br><br>
          <span class="manifesto__highlight">Hier telt maar één ding:</span> plezier in het spel.
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="values">
      <div class="values__container">
        <div class="values__card">
          <h3 class="values__title">Respect</h3>
          <p class="values__desc">Voor jezelf, je team, je tegenstander.</p>
        </div>
        <div class="values__card values__card--featured">
          <h3 class="values__title">Teamgeest</h3>
          <p class="values__desc">Alleen ga je sneller. Samen kom je verder.</p>
        </div>
        <div class="values__card">
          <h3 class="values__title">Plezier</h3>
          <p class="values__desc">Want waarom spelen we anders?</p>
        </div>
      </div>
    </section>

    <!-- Matches Section -->
    <section class="matches">
      <div class="matches__container">
        <div class="matches__header">
          <h2 class="matches__title">Komende wedstrijden</h2>
          <a href="https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden" target="_blank" class="matches__link">Alle wedstrijden →</a>
        </div>
        <div class="matches__list">
          {weekendMatches.map((match, i) => (
            <div class={`match-card ${match.isHome ? 'match-card--home' : 'match-card--away'}`}>
              <div class="match-card__num">{match.team}</div>
              <div class="match-card__content">
                <div class="match-card__team">{match.team}</div>
                <div class="match-card__opponent">{match.isHome ? match.away : match.home}</div>
                <div class="match-card__meta">
                  <span class="match-card__date">{new Date(match.date).toLocaleDateString('nl-BE', { weekday: 'long', day: 'numeric', month: 'long' })}</span>
                  <span class="match-card__time">{match.time}</span>
                </div>
              </div>
              <div class="match-card__badge">{match.isHome ? 'THUIS' : 'UIT'}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Locations Section -->
    <section class="locations">
      <div class="locations__container">
        <h2 class="locations__title">Waar vind je ons?</h2>
        <div class="locations__grid">
          <a href="https://maps.google.com/?q=Raes+van+Heerslaan+Heers" target="_blank" class="location-card">
            <div class="location-card__name">Heers VV</div>
            <div class="location-card__address">Raes van Heerslaan, 3870 Heers</div>
            <div class="location-card__arrow">↗</div>
          </a>
          <a href="https://maps.google.com/?q=Gelindenstraat+Mechelen-Bovelingen" target="_blank" class="location-card">
            <div class="location-card__name">EMBO</div>
            <div class="location-card__address">Gelindenstraat z/n, 3870 Mechelen-Bovelingen</div>
            <div class="location-card__arrow">↗</div>
          </a>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="cta__container">
        <div class="cta__content">
          <h2 class="cta__title">Klaar om<br/>mee te doen?</h2>
          <a href="https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden" target="_blank" class="cta__button">
            <span>Bekijk wedstrijden</span>
            <span class="cta__arrow">→</span>
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
      <div class="footer__grid">
        <div class="footer__col footer__col--brand">
          <img src="/logo.png" alt="HEBO Jeugd" class="footer__logo" />
          <p class="footer__manifesto">
            Geboren uit fusie.<br/>
            <span>Gedreven door passie.</span>
          </p>
        </div>
        
        <div class="footer__col">
          <h4>Navigate</h4>
          <a href="/" class="footer__link">Home</a>
          <a href="/paastoernooi" class="footer__link">Paastoernooi</a>
          <a href="#" class="footer__link">Contact</a>
        </div>
        
        <div class="footer__col">
          <h4>Extern</h4>
          <a href="https://www.voetbalvlaanderen.be/club/9732" target="_blank" class="footer__link">Voetbal Vlaanderen ↗</a>
          <a href="https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden" target="_blank" class="footer__link">Wedstrijden ↗</a>
        </div>
        
        <div class="footer__col">
          <h4>Sociaal</h4>
          <a href="#" class="footer__link">Facebook</a>
          <a href="#" class="footer__link">Instagram</a>
        </div>
      </div>
      
      <div class="footer__bottom">
        <div class="footer__locations">
          <span>Heers VV</span>
          <span class="footer__dot">•</span>
          <span>EMBO</span>
        </div>
        <div class="footer__stamp">STAMNR 09827</div>
        <div class="footer__copy">© 2026</div>
      </div>
      
      <div class="ticker">
        <div class="ticker__track">
          {[...upcomingMatches, ...upcomingMatches].map(match => (
            <div class="ticker__item">
              <span class="ticker__team">{match.team}</span>
              <span class="ticker__match">{match.isHome ? match.away : match.home}</span>
              <span class="ticker__date">{new Date(match.date).toLocaleDateString('nl-BE', { day: 'numeric', month: 'short' })} • {match.time}</span>
              <span class="ticker__badge">{match.isHome ? 'THUIS' : 'UIT'}</span>
              <span class="ticker__divider">◆</span>
            </div>
          ))}
        </div>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* Reset & Base */
  main {
    background: #fafafa;
    color: #1a1a1a;
    overflow-x: hidden;
  }

  /* Hero */
  .hero {
    min-height: 100vh;
    position: relative;
    background: linear-gradient(135deg, #0a0f1a 0%, #1e3264 100%);
