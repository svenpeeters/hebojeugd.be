    color: #c8202f;
    font-weight: 700;
  }

  .footer__link {
    display: block;
    color: #fff;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    transition: all 0.2s ease;
  }

  .footer__link:hover {
    color: #c8202f;
