      grid-template-columns: 1fr;
    }

    .matches {
      padding: 4rem 0;
    }

    .matches__header {
      flex-direction: column;
      gap: 1rem;
      align-items: center;
      text-align: center;
    }

    .match-card {
      padding: 2rem;
      position: relative;
    }

    .match-card__num {
      display: none;
    }

    .match-card__badge {
      position: absolute;
      top: 1rem;
      right: 1rem;
      font-size: 0.6rem;
      padding: 0.3rem 0.6rem;
    }

    .match-card__opponent {
      font-size: 1.1rem;
    }

    .match-card__meta {
      flex-direction: column;
      gap: 0.25rem;
    }

    .ticker {
      margin: 0 -2rem;
    }

    .ticker__track {
      animation: ticker 10s linear infinite;
    }

    .cta {
      padding: 5rem 0;
    }

    .cta__content {
      text-align: center;
    }

    .footer {
      padding: 4rem 2rem 0;
    }

    .footer__grid {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

