<script>
  const select = document.getElementById('matches-style') as HTMLSelectElement;
  const views = ['cards', 'ticker', 'minimal'];

  // Load saved preference
  const saved = localStorage.getItem('matches-style');
  if (saved && views.includes(saved)) {
    select.value = saved;
    updateView(saved);
  }

  select.addEventListener('change', (e) => {
    const value = (e.target as HTMLSelectElement).value;
    localStorage.setItem('matches-style', value);
    updateView(value);
  });

  function updateView(style: string) {
    views.forEach(v => {
      const el = document.getElementById(`view-${v}`);
      if (el) {
        el.classList.toggle('active', v === style);
      }
    });
  }
</script>
