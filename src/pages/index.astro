import BaseLayout from '../layouts/BaseLayout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import { getMatchesSafe } from '../lib/matches';

const matches = await getMatchesSafe();

const weekendMatches = (() => {
  if (!matches.length) return [];

  const first = new Date(`${matches[0].date}T00:00:00`);
  const end = new Date(first);
  end.setDate(first.getDate() + 6); // first upcoming week window

  return matches.filter((m: any) => {
    const d = new Date(`${m.date}T00:00:00`);
    return d >= first && d <= end;
  });
})();

const displayMatches = (() => {
  const result: any[] = [];
  const veteranByDate = new Map<string, any>();

  for (const m of weekendMatches as any[]) {
    if (m.team === '35+ Veteranen') {
      const key = m.date;
      const existing = veteranByDate.get(key);
      const opponent = m.isHome ? m.away : m.home;

      if (!existing) {
        const grouped = {
          ...m,
          num: '35+',
          opponents: [opponent],
          timeStart: m.time,
          timeEnd: m.time,
          badge: '8-A-SIDE',
        };
        veteranByDate.set(key, grouped);
        result.push(grouped);
      } else {
        if (!existing.opponents.includes(opponent)) existing.opponents.push(opponent);
        existing.timeStart = existing.timeStart < m.time ? existing.timeStart : m.time;
        existing.timeEnd = existing.timeEnd > m.time ? existing.timeEnd : m.time;
      }
      continue;
    }

    result.push({
      ...m,
      opponent: m.isHome ? m.away : m.home,
      badge: m.isHome ? 'THUIS' : 'UIT',
    });
  }

  return result.map((m) => ({
    ...m,
    time: m.timeStart ? (m.timeStart === m.timeEnd ? m.timeStart : `${m.timeStart} - ${m.timeEnd}`) : m.time,
  }));
})();

