    font-weight: 800;
    line-height: 1.1;
    margin: 0;
  }

  .hero__line {
    display: block;
  }

  .hero__line--accent {
    color: #c8202f;
  }

  .hero__visual {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .hero__logo-container {
    position: relative;
  }

