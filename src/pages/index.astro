    font-weight: 800;
  }

  .location-card__address {
    opacity: 0.6;
    font-size: 0.95rem;
  }

  .location-card__arrow {
    position: absolute;
    top: 2rem;
    right: 2rem;
    font-size: 1.5rem;
    opacity: 0;
    transform: translate(-10px, 10px);
    transition: all 0.3s ease;
  }

  .location-card:hover .location-card__arrow {
    opacity: 1;
    transform: translate(0, 0);
  }

  /* CTA */
  .cta {
    padding: 10rem 0;
    background: #c8202f;
    color: #fff;
    position: relative;
    overflow: hidden;
  }

  .cta__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .cta__title {
    font-size: clamp(3rem, 8vw, 7rem);
    font-weight: 800;
    line-height: 1;
    margin: 0 0 2rem 0;
  }

  .cta__button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: #fff;
    color: #c8202f;
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .cta__button:hover {
    background: #1a1a1a;
    color: #fff;
    gap: 1.5rem;
  }

