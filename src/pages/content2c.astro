        <span class="flicker">7</span>
        <span>â€”</span>
        <span class="flicker delay">9</span>
        <span>APRIL</span>
        <span class="flicker delay2">2026</span>
      </div>
    </section>

    <!-- DISTORTED GRID -->
    <section class="grid">
      <article class="card" data-tilt>
        <div class="card__glitch-bar"></div>
        <span class="card__num">002</span>
        <h2>TRAININGEN</h2>
        <p>Nieuwe uren // Februari</p>
        <div class="card__noise"></div>
      </article>

      <article class="card card--red" data-tilt>
        <div class="card__glitch-bar"></div>
        <span class="card__num">003</span>
        <h2>MANIFEST</h2>
        <p>GEEN_DRUK.exe<br/>WEL_PLEZIER.exe</p>
