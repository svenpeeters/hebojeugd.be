---
import BaseLayout from '../layouts/BaseLayout.astro';
import TrainerTradingCard from '../components/TrainerTradingCard.astro';

const amberCard = {
  card_type: 'Trainer',
  trainer_name: 'Amber Frison',
  corner_symbol: 'Coar ⛨',
  image: '/images/trainers/timothy-fontaine.png',
  actions: [
    {
      types: ['Grass', 'Leaf'],
      name: 'Feas Kick',
      damage: '20',
      description:
        'Kies 1 tegenstander. Die kan tijdens de volgende beurt geen extra sprintactie doen. Als je deze actie op gras uitvoert, trek 1 extra kaart.',
    },
    {
      types: ['Grass', 'Leaf', 'Star'],
      name: 'Nurturing Growth',
      damage: '50-',
      description:
        'Als er minstens 2 teamgenoten in steunpositie staan, doet deze actie 50 extra. Genees daarna 20 van een willekeurige bondgenoot.',
    },
  ],
  flavor_text:
    'Amber coacht met rust, ritme en overzicht. Zelfs onder druk blijft het team groeien en geloven in het plan.',
  copyright: '©2026 Pokémon / VC HEBO Jeugd / Art Team',
  collector_info: '032/115 U',
};
---

<BaseLayout title="Trainers cards | VC HEBO Jeugd">
  <section class="cards-hero">
    <div class="cards-hero__container">
      <h1>Trainers Cards</h1>
      <p>Alternatieve kaartweergave voor de trainerspagina.</p>
    </div>
  </section>

  <section class="cards-stage">
    <div class="cards-stage__pitch"></div>
    <TrainerTradingCard data={amberCard} />
  </section>
</BaseLayout>

<style>
  .cards-hero {
    background: #1e3264;
    color: #fff;
    padding: 7rem 2rem 3rem;
    text-align: center;
  }

  .cards-hero__container { max-width: 900px; margin: 0 auto; }
  .cards-hero h1 { margin: 0; font-size: clamp(2.2rem, 5vw, 3.6rem); }
  .cards-hero p { margin: .8rem 0 0; opacity: .85; }

  .cards-stage {
    position: relative;
    min-height: 70vh;
    padding: 4rem 1.5rem 6rem;
    background: #dce8d9;
    overflow: hidden;
  }

  .cards-stage__pitch {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 20%, rgba(255,255,255,.35), transparent 40%),
      repeating-linear-gradient(0deg, rgba(255,255,255,.08), rgba(255,255,255,.08) 2px, transparent 2px, transparent 22px),
      linear-gradient(180deg, #bdd8b0 0%, #9ac08d 50%, #7ea975 100%);
    filter: saturate(0.9);
  }
</style>
