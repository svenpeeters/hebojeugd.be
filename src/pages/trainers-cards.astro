---
import BaseLayout from '../layouts/BaseLayout.astro';
import TrainerTradingCard from '../components/TrainerTradingCard.astro';

const trainers = [
  { team: 'U5', name: 'Amber Frison' },
  { team: 'U5', name: 'Nicky Berwaerts' },
  { team: 'U6', name: 'Kenji Jossa' },
  { team: 'U7', name: 'Timothy Fontaine' },
  { team: 'U9', name: 'Dave Daniels' },
  { team: 'U9', name: 'Kevin Castro' },
  { team: 'U10', name: 'Willy Missotten' },
  { team: 'U10', name: 'Jurgen Polders' },
  { team: 'U11/12', name: 'Andy Bex' },
  { team: 'U11/12', name: 'Frank Missotten' },
  { team: 'U15', name: 'Jean-Marie Cloesen' },
  { team: 'U15', name: 'Roger Vanhaeren' },
  { team: 'U17', name: 'Joeri Fontaine' },
  { team: 'Alle teams', name: 'Gilles Vanswijgenhoven' },
];

const buildCardData = (trainer: { team: string; name: string }) => ({
  card_type: 'Trainer',
  trainer_name: trainer.name,
  corner_symbol: trainer.team,
  image: '/images/trainers/timothy-fontaine.png',
  actions: [
    {
      types: ['Grass', 'Leaf'],
      name: 'Team Coaching',
      damage: '20',
      description: `Focus op ${trainer.team}. Verbetert passing en positiespel met duidelijke coaching vanop de zijlijn.`,
    },
    {
      types: ['Grass', 'Leaf', 'Star'],
      name: 'Match Focus',
      damage: '50-',
      description: 'Bij sterke samenwerking stijgt het rendement van deze actie. Teamdiscipline zorgt voor extra impact.',
    },
  ],
  flavor_text: `${trainer.name} begeleidt ${trainer.team} met rust, structuur en enthousiasme.`,
  copyright: '©2026 Pokémon / VC HEBO Jeugd / Art Team',
  collector_info: `${trainer.team} • HEBO`,
});
---

<BaseLayout title="Trainers cards | VC HEBO Jeugd">
  <section class="hero">
    <div class="hero__container">
      <h1 class="hero__title">Trainersstaf</h1>
      <p class="hero__subtitle">Alle trainers als cards, netjes naast elkaar.</p>
    </div>
  </section>

  <section class="cards-stage">
    <div class="cards-stage__pitch"></div>
    <div class="cards-grid">
      {trainers.map((trainer) => (
        <TrainerTradingCard data={buildCardData(trainer)} compact />
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  main { background: #f3f6f2; }

  .hero {
    background: #1e3264;
    color: #fff;
    padding: 8rem 2rem 4rem;
    text-align: center;
  }

  .hero__container { max-width: 900px; margin: 0 auto; }
  .hero__title { font-size: clamp(2.5rem, 6vw, 4rem); margin: 0; font-weight: 900; }
  .hero__subtitle { margin: .9rem 0 0; opacity: .85; }

  .cards-stage {
    position: relative;
    padding: 4rem 2rem 5rem;
    overflow: hidden;
  }

  .cards-stage__pitch {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(circle at 20% 20%, rgba(255,255,255,.3), transparent 40%),
      repeating-linear-gradient(0deg, rgba(255,255,255,.07), rgba(255,255,255,.07) 2px, transparent 2px, transparent 22px),
      linear-gradient(180deg, #bdd8b0 0%, #9ac08d 50%, #7ea975 100%);
  }

  .cards-grid {
    position: relative;
    z-index: 2;
    max-width: 1440px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.25rem;
    align-items: start;
  }
</style>
