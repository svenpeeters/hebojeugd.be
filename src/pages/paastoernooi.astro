<style>
  main {
    background: #fafafa;
    color: #1a1a1a;
    overflow-x: hidden;
    position: relative;
  }

  /* Polaroid Tracks */
  .polaroid-track {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 280px;
    overflow: hidden;
    z-index: 100;
    pointer-events: none;
  }

  .polaroid-track--left {
    left: 0;
  }

  .polaroid-track--right {
    right: 0;
  }

  .polaroid-scroll {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem;
  }

  .polaroid-scroll--up {
    animation: scrollUp 120s linear infinite;
  }

  .polaroid-scroll--down {
    animation: scrollDown 120s linear infinite;
  }

  @keyframes scrollUp {
    0% { transform: translateY(0); }
    100% { transform: translateY(-50%); }
  }

  @keyframes scrollDown {
    0% { transform: translateY(-50%); }
    100% { transform: translateY(0); }
  }

  .polaroid {
    background: #fff;
    padding: 8px 8px 28px 8px;
    flex-shrink: 0;
    transform: rotate(var(--rotate, 0deg));
  }

  .polaroid:nth-child(odd) { --rotate: -3deg; }
  .polaroid:nth-child(even) { --rotate: 3deg; }
  .polaroid:nth-child(3n) { --rotate: -5deg; }
  .polaroid:nth-child(4n) { --rotate: 5deg; }

  .polaroid img {
    width: 220px;
    height: 180px;
    object-fit: cover;
    display: block;
  }

  /* Hero */
  .hero {
    min-height: 600px;
    height: 70vh;
    max-height: 700px;
    position: relative;
    background: linear-gradient(135deg, #0a0f1a 0%, #1e3264 100%);
    color: #fff;
    overflow: hidden;
  }

  .hero__container {
    position: relative;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .hero__content {
    text-align: center;
    padding: 2rem 0;
  }

  .hero__eyebrow {
    font-size: 0.85rem;
    letter-spacing: 3px;
    text-transform: uppercase;
    opacity: 0.6;
    margin-bottom: 2rem;
  }

  .hero__title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1.1;
    margin: 0;
  }

  .hero__line {
    display: block;
  }

  .hero__line--accent {
    color: #c8202f;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    opacity: 0.7;
    margin: 1.5rem 0 2rem;
  }

  .hero__cta {
    margin-top: 2rem;
  }

  .hero__button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #c8202f;
    color: #fff;
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1.1rem;
    transition: all 0.3s ease;
  }

  .hero__button:hover {
    background: #fff;
    color: #c8202f;
    transform: scale(1.05);
  }

  /* Content sections */
  .manifesto,
  .values,
  .matches,
  .cta,
  .footer {
    position: relative;
  }

  /* Values */
  .values__container {
    display: grid;
