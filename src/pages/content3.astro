---
import Layout from '../layouts/Layout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Nieuws | VC HEBO Jeugd">
  <main>
    <PaastoernooiTicker />

    <!-- Marquee Header -->
    <div class="marquee">
      <div class="marquee__track">
        <span>NIEUWS</span>
        <span>◆</span>
        <span>UPDATES</span>
        <span>◆</span>
        <span>HEBO JEUGD</span>
        <span>◆</span>
        <span>NIEUWS</span>
        <span>◆</span>
        <span>UPDATES</span>
        <span>◆</span>
        <span>HEBO JEUGD</span>
        <span>◆</span>
      </div>
    </div>

    <!-- Split Hero -->
    <section class="split">
      <div class="split__left">
        <div class="split__index">(01)</div>
        <h1 class="split__title">
          Paas<br/>toer<br/>nooi<br/>'26
        </h1>
        <a href="/paastoernooi" class="split__cta">Bekijk details</a>
      </div>
      <div class="split__right">
        <img src="/team-photo.jpg" alt="" />
        <div class="split__overlay">
          <span>7</span>
          <span>—</span>
          <span>9</span>
          <span>APR</span>
        </div>
      </div>
    </section>

    <!-- Cards Row -->
    <section class="cards">
      <article class="card">
        <div class="card__header">
          <span class="card__index">(02)</span>
          <span class="card__cat">Club</span>
        </div>
        <h2 class="card__title">Nieuwe<br/>trainings<br/>uren</h2>
        <p class="card__date">15 JAN</p>
      </article>
      <article class="card card--dark">
        <div class="card__header">
          <span class="card__index">(03)</span>
          <span class="card__cat">Recap</span>
        </div>
        <h2 class="card__title">Eindejaars<br/>toernooi</h2>
        <p class="card__stat">200+</p>
        <p class="card__date">10 JAN</p>
      </article>
      <article class="card">
        <div class="card__header">
          <span class="card__index">(04)</span>
          <span class="card__cat">Help</span>
        </div>
        <h2 class="card__title">Vrijwilligers<br/>gezocht</h2>
        <p class="card__date">05 JAN</p>
      </article>
    </section>

    <!-- Quote Block -->
    <section class="quote">
      <blockquote>
        <span class="quote__mark">"</span>
        <p>Geen geschreeuw langs de lijn.<br/>Geen druk om te winnen.<br/>Wel plezier in het spel.</p>
        <cite>— Onze filosofie</cite>
      </blockquote>
    </section>

    <!-- List -->
    <section class="list">
      <div class="list__header">
        <span>Meer nieuws</span>
        <span>2026</span>
      </div>
      <a href="#" class="list__item">
        <span class="list__num">05</span>
        <span class="list__title">Seizoensplannen 2026</span>
        <span class="list__arrow">→</span>
      </a>
      <a href="#" class="list__item">
        <span class="list__num">06</span>
        <span class="list__title">Nieuwe samenwerkingen</span>
        <span class="list__arrow">→</span>
      </a>
      <a href="#" class="list__item">
        <span class="list__num">07</span>
        <span class="list__title">Infrastructuur updates</span>
        <span class="list__arrow">→</span>
      </a>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #f0f0f0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Marquee */
  .marquee {
    background: #0a0a0a;
    color: #fff;
    padding: 1rem 0;
    overflow: hidden;
  }

  .marquee__track {
    display: flex;
    gap: 2rem;
    animation: marquee 15s linear infinite;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 4px;
    text-transform: uppercase;
  }

  @keyframes marquee {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  /* Split */
  .split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 80vh;
  }

  .split__left {
    background: #fff;
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .split__index {
    font-size: 0.8rem;
    font-weight: 600;
    margin-bottom: 2rem;
    opacity: 0.4;
  }

  .split__title {
    font-size: clamp(4rem, 12vw, 10rem);
    font-weight: 900;
    line-height: 0.85;
    margin: 0;
    letter-spacing: -4px;
  }

  .split__cta {
    margin-top: 3rem;
    font-size: 0.85rem;
    font-weight: 700;
    color: #0a0a0a;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.2s;
  }

  .split__cta:hover {
    gap: 1rem;
  }

  .split__cta::after {
    content: '→';
  }

  .split__right {
    position: relative;
    overflow: hidden;
  }

  .split__right img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(100%) contrast(1.1);
    transition: filter 0.5s;
  }

  .split__right:hover img {
    filter: grayscale(0%);
  }

  .split__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: #c8202f;
    color: #fff;
    padding: 2rem;
    display: flex;
    justify-content: center;
    gap: 1rem;
    font-size: 2rem;
    font-weight: 900;
  }

  /* Cards */
  .cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
  }

  .card {
    background: #fff;
    padding: 3rem;
    border-right: 1px solid #ddd;
    display: flex;
    flex-direction: column;
    min-height: 400px;
    cursor: pointer;
    transition: all 0.3s;
  }

  .card:last-child {
    border-right: none;
  }

  .card:hover {
    background: #0a0a0a;
    color: #fff;
  }

  .card--dark {
    background: #0a0a0a;
    color: #fff;
  }

  .card--dark:hover {
    background: #c8202f;
  }

  .card__header {
    display: flex;
    justify-content: space-between;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 2rem;
  }

  .card__index {
    opacity: 0.4;
  }

  .card__title {
    font-size: 2.5rem;
    font-weight: 900;
    line-height: 1;
    margin: 0;
    letter-spacing: -1px;
  }

  .card__stat {
    font-size: 5rem;
    font-weight: 900;
    margin: auto 0 0 0;
    opacity: 0.2;
  }

  .card__date {
    margin-top: auto;
    font-size: 0.8rem;
    opacity: 0.5;
  }

  /* Quote */
  .quote {
    background: #c8202f;
    color: #fff;
    padding: 6rem 4rem;
    text-align: center;
  }

  .quote blockquote {
    max-width: 800px;
    margin: 0 auto;
  }

  .quote__mark {
    font-size: 8rem;
    line-height: 0;
    opacity: 0.3;
    display: block;
    margin-bottom: 2rem;
  }

  .quote p {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    font-weight: 700;
    line-height: 1.4;
    margin: 0;
  }

  .quote cite {
    display: block;
    margin-top: 2rem;
    font-size: 0.85rem;
    font-style: normal;
    opacity: 0.7;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  /* List */
  .list {
    background: #fff;
    flex: 1;
  }

  .list__header {
    display: flex;
    justify-content: space-between;
    padding: 1.5rem 3rem;
    font-size: 0.75rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 3px;
    border-bottom: 1px solid #eee;
    opacity: 0.5;
  }

  .list__item {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 2rem 3rem;
    border-bottom: 1px solid #eee;
    text-decoration: none;
    color: #0a0a0a;
    transition: all 0.2s;
  }

  .list__item:hover {
    background: #0a0a0a;
    color: #fff;
    padding-left: 4rem;
  }

  .list__num {
    font-size: 0.8rem;
    font-weight: 600;
    opacity: 0.4;
    min-width: 30px;
  }

  .list__title {
    flex: 1;
    font-size: 1.3rem;
    font-weight: 700;
  }

  .list__arrow {
    font-size: 1.5rem;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .list__item:hover .list__arrow {
    opacity: 1;
  }

  @media (max-width: 768px) {
    .split {
      grid-template-columns: 1fr;
    }

    .split__right {
      height: 50vh;
    }

    .cards {
      grid-template-columns: 1fr;
    }

    .card {
      border-right: none;
      border-bottom: 1px solid #ddd;
      min-height: 300px;
    }
  }
</style>
