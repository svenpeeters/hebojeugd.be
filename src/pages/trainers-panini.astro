---
import Layout from '../layouts/Layout.astro';
import NavbarAlt from '../components/NavbarAlt.astro';
import Footer from '../components/Footer.astro';

const trainers = [
  { num: '01', team: 'U5', name: 'Claudine Hartjesveld', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '02', team: 'U6', name: 'Kenji Jossa', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '03', team: 'U7', name: 'Timothy Fontaine', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '04', team: 'U9', name: 'Dave Daniels', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '05', team: 'U10', name: 'Willy Missotten', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '06', team: 'U10', name: 'Jurgen Polders', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '07', team: 'U11/12', name: 'Andy Bex', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '08', team: 'U11/12', name: 'Frank Missotten', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '09', team: 'U15', name: 'Jean-Marie Cloesen', role: 'Trainer', group: 'Bovenbouw', color: '#f28482' },
  { num: '10', team: 'U15', name: 'Roger Vanhaeren', role: 'Trainer', group: 'Bovenbouw', color: '#f28482' },
  { num: '11', team: 'U17', name: 'Joeri Fontaine', role: 'Trainer', group: 'Bovenbouw', color: '#f28482' },
  { num: '12', team: 'Keepers', name: 'Gilles Vanswijgenhoven', role: 'Keeperstrainer', group: 'Specialisten', color: '#90b4ed' },
];
---

<Layout title="Trainersstaf | VC HEBO Jeugd">
  <main>
    <NavbarAlt />

    <!-- Header -->
    <section class="header">
      <h1>Trainersstaf</h1>
      <p>Seizoen 2024-25</p>
    </section>

    <!-- Cards Grid -->
    <section class="cards">
      <div class="cards__grid">
        {trainers.map((trainer, i) => (
          <div class="card" style={`--accent: ${trainer.color}; --delay: ${i * 0.05}s`}>
            <div class="card__top">
              <span class="card__badge">âš½</span>
              <div class="card__avatar">
                <span>{trainer.name.split(' ').map(n => n[0]).join('')}</span>
              </div>
            </div>
            
            <div class="card__middle">
              <h2 class="card__name">{trainer.name}</h2>
              <span class="card__role">{trainer.role}</span>
            </div>

            <div class="card__bottom">
              <div class="card__info">
                <span class="card__team">{trainer.team}</span>
              </div>
              <div class="card__group">
                <span>{trainer.group}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #1a1a2e;
    min-height: 100vh;
  }

  /* Header */
  .header {
    padding: 4rem 2rem 2rem;
    text-align: center;
    color: #fff;
  }

  .header h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0;
  }

  .header p {
    margin: 0.5rem 0 0;
    opacity: 0.6;
    font-size: 1rem;
  }

  /* Cards Grid */
  .cards {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .cards__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 2rem;
  }

  /* Card */
  .card {
    background: #fff;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    animation: fadeUp 0.5s ease-out backwards;
    animation-delay: var(--delay);
    transition: transform 0.3s ease;
  }

  .card:hover {
    transform: translateY(-10px) rotate(-1deg);
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
  }

  /* Card Top */
  .card__top {
    background: var(--accent);
    padding: 2rem;
    position: relative;
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card__badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    font-size: 1.5rem;
    background: rgba(255,255,255,0.3);
    width: 40px;
    height: 40px;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .card__avatar {
    width: 140px;
    height: 140px;
    background: rgba(255,255,255,0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    font-weight: 900;
    color: rgba(0,0,0,0.3);
    border: 4px solid rgba(255,255,255,0.5);
  }

  /* Card Middle */
  .card__middle {
    padding: 1.5rem 1.5rem 1rem;
    text-align: center;
    border-bottom: 2px solid #eee;
  }

  .card__name {
    font-size: 1.4rem;
    font-weight: 900;
    margin: 0;
    color: #1a1a1a;
    text-transform: uppercase;
    letter-spacing: -0.5px;
  }

  .card__role {
    display: block;
    margin-top: 0.25rem;
    font-size: 0.9rem;
    color: #666;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  /* Card Bottom */
  .card__bottom {
    padding: 1rem 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: color-mix(in srgb, var(--accent) 15%, white);
  }

  .card__info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .card__team {
    font-size: 1.1rem;
    font-weight: 800;
    color: #1a1a1a;
  }

  .card__group {
    font-size: 0.75rem;
    font-weight: 700;
    color: color-mix(in srgb, var(--accent) 80%, black);
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  @media (max-width: 600px) {
    .cards__grid {
      grid-template-columns: 1fr;
      max-width: 350px;
      margin: 0 auto;
    }

    .card__name {
      font-size: 1.2rem;
    }
  }
</style>
