---
import BaseLayout from '../layouts/BaseLayout.astro';

const trainers = [
  { num: '01', team: 'U5', name: 'Claudine Hartjesveld', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '02', team: 'U6', name: 'Kenji Jossa', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '03', team: 'U7', name: 'Timothy Fontaine', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0', image: '/images/trainers/timothy-fontaine.png' },
  { num: '04', team: 'U9', name: 'Dave Daniels', role: 'Trainer', group: 'Onderbouw', color: '#7dd3c0' },
  { num: '05', team: 'U10', name: 'Willy Missotten', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '06', team: 'U10', name: 'Jurgen Polders', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '07', team: 'U11/12', name: 'Andy Bex', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '08', team: 'U11/12', name: 'Frank Missotten', role: 'Trainer', group: 'Middenbouw', color: '#f9c74f' },
  { num: '09', team: 'U15', name: 'Jean-Marie Cloesen', role: 'Trainer', group: 'Bovenbouw', color: '#f28482' },
  { num: '10', team: 'U15', name: 'Roger Vanhaeren', role: 'Trainer', group: 'Bovenbouw', color: '#f28482' },
  { num: '11', team: 'U17', name: 'Joeri Fontaine', role: 'Trainer', group: 'Bovenbouw', color: '#f28482' },
  { num: '12', team: 'Keepers', name: 'Gilles Vanswijgenhoven', role: 'Keeperstrainer', group: 'Specialisten', color: '#90b4ed' },
];
---

<BaseLayout title="Trainersstaf | VC HEBO Jeugd">
  

    <section class="header">
      <h1>Trainersstaf</h1>
      <p>Seizoen 2024-25</p>
    </section>

    <section class="cards">
      <div class="cards__grid">
        {trainers.map((trainer, i) => (
          <div class="card" style={`--accent: ${trainer.color}; --delay: ${i * 0.05}s`}>
            <div class="card__inner">
              <!-- Top area with badge -->
              <div class="card__top">
                <span class="card__badge">âš½ {trainer.team}</span>
              </div>

              <!-- Avatar - breaks out of card -->
              <div class="card__avatar-wrap">
                {trainer.image ? (
                  <img src={trainer.image} alt={trainer.name} class="card__avatar-img" />
                ) : (
                  <div class="card__avatar-placeholder">
                    <span>{trainer.name.split(' ').map(n => n[0]).join('')}</span>
                  </div>
                )}
              </div>

              <!-- Name banner - rotated -->
              <div class="card__banner">
                <div class="card__banner-inner">
                  <h2 class="card__name">{trainer.name}</h2>
                  <span class="card__role">{trainer.role}</span>
                </div>
              </div>

              <!-- Bottom section -->
              <div class="card__bottom">
                <span class="card__group">{trainer.group}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

  
</BaseLayout>

<style>
  main {
    background: #1a1a2e;
    min-height: 100vh;
  }

  .header {
    padding: 4rem 2rem 2rem;
    text-align: center;
    color: #fff;
  }

  .header h1 {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0;
  }

  .header p {
    margin: 0.5rem 0 0;
    opacity: 0.6;
  }

  .cards {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
  }

  .cards__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 3rem 2rem;
  }

  /* Card */
  .card {
    aspect-ratio: 3/4;
    animation: fadeUp 0.5s ease-out backwards;
    animation-delay: var(--delay);
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(30px); }
  }

  .card__inner {
    position: relative;
    width: 100%;
    height: 100%;
    background: var(--accent);
    border-radius: 12px;
    overflow: visible;
    box-shadow: 0 20px 40px rgba(0,0,0,0.3);
    transition: transform 0.3s ease;
  }

  .card:hover .card__inner {
    transform: scale(1.02);
  }

  /* Top badge */
  .card__top {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 5;
  }

  .card__badge {
    background: rgba(255,255,255,0.25);
    backdrop-filter: blur(10px);
    padding: 0.4rem 0.8rem;
    border-radius: 8px;
    font-size: 0.8rem;
    font-weight: 700;
    color: #fff;
  }

  /* Avatar */
  .card__avatar-wrap {
    position: absolute;
    bottom: 45%;
    right: -10%;
    width: 80%;
    height: 70%;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
    z-index: 10;
    transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    pointer-events: none;
  }

  .card:hover .card__avatar-wrap {
    transform: translateY(-20px) scale(1.05);
  }

  .card__avatar-img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    object-position: right bottom;
    filter: drop-shadow(0 20px 30px rgba(0,0,0,0.3));
  }

  .card__avatar-placeholder {
    width: 120px;
    height: 120px;
    background: rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2.5rem;
    font-weight: 900;
    color: rgba(255,255,255,0.5);
    margin-right: 20%;
    margin-bottom: 20%;
  }

  /* Banner */
  .card__banner {
    position: absolute;
    bottom: 30%;
    left: 0;
    right: 0;
    z-index: 15;
    transform: rotate(-3deg);
    transition: transform 0.3s ease;
  }

  .card:hover .card__banner {
    transform: rotate(-2deg) translateY(-5px);
  }

  .card__banner-inner {
    background: #fff;
    border-top: 3px solid #1a1a1a;
    border-bottom: 3px solid #1a1a1a;
    padding: 0.75rem 1rem;
    margin: 0 -0.5rem;
    text-align: right;
  }

  .card__name {
    font-size: 1.3rem;
    font-weight: 900;
    margin: 0;
    color: #1a1a1a;
    text-transform: uppercase;
    line-height: 1.1;
  }

  .card__role {
    font-size: 0.85rem;
    color: #666;
    font-weight: 600;
  }

  /* Bottom */
  .card__bottom {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 30%;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    border-radius: 0 0 12px 12px;
    display: flex;
    align-items: flex-end;
    padding: 1rem;
  }

  .card__group {
    font-size: 0.9rem;
    font-weight: 800;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  @media (max-width: 600px) {
    .cards__grid {
      grid-template-columns: 1fr;
      max-width: 320px;
      margin: 0 auto;
    }
  }
</style>
