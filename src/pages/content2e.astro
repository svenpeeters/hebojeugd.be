---
import Layout from '../layouts/Layout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Nieuws | VC HEBO Jeugd">
  <main>
    <PaastoernooiTicker />

    <!-- MASSIVE TYPE -->
    <section class="massive">
      <div class="marquee-wrap">
        <div class="marquee-track">
          <span>PAASTOERNOOI</span>
          <span>◆</span>
          <span>2026</span>
          <span>◆</span>
          <span>PAASTOERNOOI</span>
          <span>◆</span>
          <span>2026</span>
          <span>◆</span>
        </div>
      </div>
      <div class="marquee-wrap marquee-wrap--reverse">
        <div class="marquee-track">
          <span>7—9 APRIL</span>
          <span>★</span>
          <span>HEBO JEUGD</span>
          <span>★</span>
          <span>7—9 APRIL</span>
          <span>★</span>
          <span>HEBO JEUGD</span>
          <span>★</span>
        </div>
      </div>
    </section>

    <!-- BLEND BLOCKS -->
    <section class="blend">
      <div class="blend__left">
        <div class="blend__item">
          <span class="blend__num">01</span>
          <h2>Trainingen</h2>
          <p>Nieuwe uren februari</p>
        </div>
        <div class="blend__item">
          <span class="blend__num">02</span>
          <h2>Filosofie</h2>
          <p>Geen druk, wel plezier</p>
        </div>
        <div class="blend__item">
          <span class="blend__num">03</span>
          <h2>Eindejaars</h2>
          <p>200+ spelers</p>
        </div>
      </div>
      <div class="blend__right">
        <div class="blend__circle">
          <span>PLEZIER</span>
        </div>
      </div>
      <div class="blend__overlay">HEBO</div>
    </section>

    <!-- SCROLL REVEAL -->
    <section class="reveal">
      <div class="reveal__row">
        <span class="reveal__big">VRIJWILLIGERS</span>
      </div>
      <div class="reveal__row reveal__row--indent">
        <span class="reveal__big reveal__big--outline">GEZOCHT</span>
      </div>
      <div class="reveal__cta">
        <a href="mailto:info@hebojeugd.be">
          <span class="reveal__arrow">↓</span>
          <span>Mail ons</span>
        </a>
      </div>
    </section>

    <!-- QUOTE SECTION -->
    <section class="quote-section">
      <div class="quote-bg">
        <span>GEEN</span>
        <span>GESCHREEUW</span>
      </div>
      <blockquote class="quote-main">
        <p>Hier draait alles<br/>om het spel.</p>
      </blockquote>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #f5f5f5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
  }

  /* Massive Marquee */
  .massive {
    padding: 4rem 0;
    background: #1e3264;
    overflow: hidden;
  }

  .marquee-wrap {
    overflow: hidden;
    padding: 1rem 0;
  }

  .marquee-track {
    display: flex;
    gap: 2rem;
    animation: scroll 15s linear infinite;
    width: max-content;
  }

  .marquee-wrap--reverse .marquee-track {
    animation-direction: reverse;
    animation-duration: 20s;
  }

  @keyframes scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .marquee-track span {
    font-size: clamp(4rem, 15vw, 12rem);
    font-weight: 900;
    color: #fff;
    white-space: nowrap;
    letter-spacing: -3px;
  }

  .marquee-wrap--reverse .marquee-track span {
    font-size: clamp(2rem, 8vw, 6rem);
    -webkit-text-stroke: 2px #fff;
    color: transparent;
  }

  /* Blend */
  .blend {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 80vh;
    position: relative;
    overflow: hidden;
  }

  .blend__left {
    padding: 4rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 3rem;
  }

  .blend__item {
    cursor: pointer;
    transition: transform 0.3s;
  }

  .blend__item:hover {
    transform: translateX(2rem);
  }

  .blend__num {
    font-size: 0.7rem;
    letter-spacing: 3px;
    opacity: 0.3;
    display: block;
    margin-bottom: 0.5rem;
  }

  .blend__item h2 {
    font-size: 3rem;
    font-weight: 900;
    margin: 0;
    letter-spacing: -2px;
  }

  .blend__item p {
    font-size: 1rem;
    opacity: 0.5;
    margin: 0.5rem 0 0 0;
  }

  .blend__right {
    background: #c8202f;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blend__circle {
    width: 300px;
    height: 300px;
    border: 4px solid #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }

  .blend__circle span {
    font-size: 2rem;
    font-weight: 900;
    color: #fff;
    letter-spacing: 8px;
  }

  .blend__overlay {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 30vw;
    font-weight: 900;
    color: #1e3264;
    mix-blend-mode: multiply;
    opacity: 0.1;
    pointer-events: none;
  }

  /* Reveal */
  .reveal {
    padding: 8rem 4rem;
    background: #0a0a0a;
    color: #fff;
  }

  .reveal__row {
    overflow: hidden;
  }

  .reveal__row--indent {
    padding-left: 15vw;
  }

  .reveal__big {
    font-size: clamp(4rem, 15vw, 15rem);
    font-weight: 900;
    line-height: 0.9;
    letter-spacing: -5px;
    display: block;
  }

  .reveal__big--outline {
    -webkit-text-stroke: 3px #fff;
    color: transparent;
  }

  .reveal__cta {
    margin-top: 4rem;
  }

  .reveal__cta a {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    color: #fff;
    text-decoration: none;
    font-size: 1.2rem;
    font-weight: 600;
    transition: gap 0.3s;
  }

  .reveal__cta a:hover {
    gap: 2rem;
  }

  .reveal__arrow {
    font-size: 2rem;
    animation: bounce 1s ease-in-out infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(10px); }
  }

  /* Quote Section */
  .quote-section {
    padding: 8rem 4rem;
    position: relative;
    overflow: hidden;
    background: #f5f5f5;
  }

  .quote-bg {
    position: absolute;
    top: 50%;
    left: 0;
    transform: translateY(-50%);
    font-size: 15vw;
    font-weight: 900;
    color: #e8e8e8;
    white-space: nowrap;
    display: flex;
    flex-direction: column;
    line-height: 0.9;
  }

  .quote-main {
    position: relative;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .quote-main p {
    font-size: clamp(2rem, 6vw, 4rem);
    font-weight: 900;
    line-height: 1.2;
    margin: 0;
  }

  @media (max-width: 900px) {
    .blend {
      grid-template-columns: 1fr;
    }

    .blend__left {
      padding: 2rem;
    }

    .blend__right {
      min-height: 300px;
    }

    .reveal {
      padding: 4rem 2rem;
    }

    .reveal__row--indent {
      padding-left: 0;
    }
  }
</style>
