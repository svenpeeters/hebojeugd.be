---
import Layout from '../layouts/Layout.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Nieuws | VC HEBO Jeugd">
  <main>
    <PaastoernooiTicker />

    <!-- Minimal Hero -->
    <section class="hero">
      <div class="hero__label">
        <span class="hero__line"></span>
        <span>Featured</span>
      </div>
      <h1 class="hero__title">
        <span class="hero__word" data-num="01">Paas</span>
        <span class="hero__word" data-num="02">toernooi</span>
        <span class="hero__word hero__word--outline" data-num="03">2026</span>
      </h1>
      <div class="hero__bottom">
        <p class="hero__desc">Drie dagen voetbal.<br/>Honderden spelers.<br/>Één missie: plezier.</p>
        <a href="/paastoernooi" class="hero__btn">
          <span>Ontdek</span>
          <span class="hero__btn-arrow">→</span>
        </a>
      </div>
    </section>

    <!-- Index -->
    <nav class="index">
      <div class="index__header">
        <span>Index</span>
        <span>06 items</span>
      </div>
    </nav>

    <!-- Items -->
    <section class="items">
      <a href="#" class="item">
        <span class="item__num">01</span>
        <div class="item__content">
          <h2 class="item__title">Paastoernooi 2026</h2>
          <p class="item__sub">7—9 April / U6—U13</p>
        </div>
        <span class="item__cat">Event</span>
        <span class="item__arrow">↗</span>
      </a>

      <a href="#" class="item">
        <span class="item__num">02</span>
        <div class="item__content">
          <h2 class="item__title">Nieuwe trainingsuren</h2>
          <p class="item__sub">Februari 2026</p>
        </div>
        <span class="item__cat">Club</span>
        <span class="item__arrow">↗</span>
      </a>

      <a href="#" class="item item--highlight">
        <span class="item__num">03</span>
        <div class="item__content">
          <h2 class="item__title">Onze filosofie</h2>
          <p class="item__sub">Geen druk. Wel plezier.</p>
        </div>
        <span class="item__cat">Manifest</span>
        <span class="item__arrow">↗</span>
      </a>

      <a href="#" class="item">
        <span class="item__num">04</span>
        <div class="item__content">
          <h2 class="item__title">Eindejaarstoernooi recap</h2>
          <p class="item__sub">200+ deelnemers</p>
        </div>
        <span class="item__cat">Recap</span>
        <span class="item__arrow">↗</span>
      </a>

      <a href="#" class="item">
        <span class="item__num">05</span>
        <div class="item__content">
          <h2 class="item__title">Vrijwilligers gezocht</h2>
          <p class="item__sub">Help mee bouwen</p>
        </div>
        <span class="item__cat">Oproep</span>
        <span class="item__arrow">↗</span>
      </a>

      <a href="#" class="item">
        <span class="item__num">06</span>
        <div class="item__content">
          <h2 class="item__title">Seizoen 2026</h2>
          <p class="item__sub">Plannen & ambities</p>
        </div>
        <span class="item__cat">Vooruit</span>
        <span class="item__arrow">↗</span>
      </a>
    </section>

    <!-- Contact Block -->
    <section class="contact">
      <div class="contact__left">
        <span class="contact__label">Contact</span>
        <a href="mailto:info@hebojeugd.be" class="contact__email">info@hebojeugd.be</a>
      </div>
      <div class="contact__right">
        <span class="contact__label">Social</span>
        <a href="https://www.facebook.com/share/1AJQuHjTBZ/" target="_blank" class="contact__social">Facebook ↗</a>
      </div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #fafafa;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  /* Hero */
  .hero {
    padding: 8rem 4rem 6rem;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
  }

  .hero__label {
    display: flex;
    align-items: center;
    gap: 1rem;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 4px;
    margin-bottom: 3rem;
  }

  .hero__line {
    width: 60px;
    height: 1px;
    background: #0a0a0a;
  }

  .hero__title {
    font-size: clamp(3rem, 12vw, 10rem);
    font-weight: 900;
    line-height: 0.95;
    margin: 0;
    letter-spacing: -4px;
  }

  .hero__word {
    display: block;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    -webkit-text-stroke: 2px #c0c0c0;
    color: transparent;
  }

  .hero__word::before {
    content: attr(data-num);
    position: absolute;
    left: -3rem;
    top: 50%;
    transform: translateY(-50%);
    font-size: 0.7rem;
    font-weight: 400;
    letter-spacing: 2px;
    opacity: 0.3;
  }

  .hero__word:hover {
    transform: translateX(2rem);
  }

  .hero__word--outline {
    -webkit-text-stroke: 0;
    color: #0a0a0a !important;
  }

  .hero__bottom {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid #ddd;
  }

  .hero__desc {
    font-size: 1rem;
    line-height: 1.8;
    opacity: 0.6;
    margin: 0;
  }

  .hero__btn {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 2rem;
    background: #0a0a0a;
    color: #fff;
    text-decoration: none;
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 1px;
    transition: gap 0.3s, background 0.3s;
  }

  .hero__btn:hover {
    gap: 2rem;
    background: #c8202f;
  }

  .hero__btn-arrow {
    transition: transform 0.3s;
  }

  .hero__btn:hover .hero__btn-arrow {
    transform: translateX(5px);
  }

  /* Index */
  .index {
    border-top: 1px solid #ddd;
    border-bottom: 1px solid #ddd;
  }

  .index__header {
    display: flex;
    justify-content: space-between;
    padding: 1rem 4rem;
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    opacity: 0.5;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
  }

  /* Items */
  .items {
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
  }

  .item {
    display: grid;
    grid-template-columns: 60px 1fr auto 60px;
    align-items: center;
    gap: 2rem;
    padding: 2.5rem 4rem;
    border-bottom: 1px solid #eee;
    text-decoration: none;
    color: #0a0a0a;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .item:hover {
    background: #0a0a0a;
    color: #fff;
    padding-left: 5rem;
  }

  .item--highlight {
    background: #c8202f;
    color: #fff;
  }

  .item--highlight .item__num,
  .item--highlight .item__sub,
  .item--highlight .item__cat {
    opacity: 0.7;
  }

  .item--highlight:hover {
    background: #0a0a0a;
  }

  .item:hover .item__num,
  .item:hover .item__sub,
  .item:hover .item__cat {
    opacity: 0.7;
  }

  .item__num {
    font-size: 0.75rem;
    font-weight: 600;
    opacity: 0.4;
  }

  .item__content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .item__title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
  }

  .item__sub {
    font-size: 0.85rem;
    opacity: 0.6;
    margin: 0;
  }

  .item__cat {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    opacity: 0.5;
  }

  .item__arrow {
    font-size: 1.5rem;
    opacity: 0;
    transform: translate(-10px, 10px);
    transition: all 0.3s;
  }

  .item:hover .item__arrow {
    opacity: 1;
    transform: translate(0, 0);
  }

  /* Contact */
  .contact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    max-width: 1400px;
    margin: 0 auto;
    width: 100%;
    border-top: 1px solid #ddd;
  }

  .contact__left,
  .contact__right {
    padding: 4rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact__left {
    border-right: 1px solid #ddd;
  }

  .contact__label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    opacity: 0.5;
  }

  .contact__email,
  .contact__social {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0a0a0a;
    text-decoration: none;
    transition: color 0.2s;
  }

  .contact__email:hover,
  .contact__social:hover {
    color: #c8202f;
  }

  @media (max-width: 768px) {
    .hero {
      padding: 4rem 2rem;
    }

    .hero__word::before {
      display: none;
    }

    .hero__word:hover {
      transform: none;
    }

    .hero__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 2rem;
    }

    .index__header {
      padding: 1rem 2rem;
    }

    .item {
      grid-template-columns: 1fr;
      padding: 2rem;
      gap: 0.5rem;
    }

    .item:hover {
      padding-left: 2rem;
    }

    .item__num,
    .item__cat {
      display: none;
    }

    .item__arrow {
      position: absolute;
      right: 2rem;
      opacity: 0.3;
      transform: none;
    }

    .contact {
      grid-template-columns: 1fr;
    }

    .contact__left {
      border-right: none;
      border-bottom: 1px solid #ddd;
    }

    .contact__left,
    .contact__right {
      padding: 2rem;
    }
  }
</style>
