---
import BaseLayout from '../layouts/BaseLayout.astro';
import PhaseCard from '../components/PhaseCard.astro';
import ContactCard from '../components/ContactCard.astro';
---

<BaseLayout title="Jeugdwerking | VC HEBO Jeugd">
  

    <!-- Hero -->
    <section class="hero">
      <div class="hero__container">
        <h1 class="hero__title">Jeugdwerking</h1>
        <p class="hero__subtitle">Onze jeugdopleiding is opgedeeld in drie opleidingsfasen</p>
      </div>
    </section>

    <!-- Structuur -->
    <section class="structure">
      <div class="structure__container">
        <PhaseCard
          phase="onderbouw"
          label="Fase 1"
          title="Onderbouw"
          ages="U5 - U9"
          description="De basis van het voetbalplezier. Hier leren de jongste spelers spelenderwijs de bal kennen en maken ze hun eerste vriendjes op het veld."
          teams={['U5 (Kleuters)', 'U6', 'U7', 'U8', 'U9']}
        />

        <PhaseCard
          phase="middenbouw"
          label="Fase 2"
          title="Middenbouw"
          ages="U10 - U13"
          description="De ontwikkelfase. Techniek, tactiek en teamplay worden verder uitgebouwd. Spelers groeien als individu én als team."
          teams={['U10', 'U11', 'U12', 'U13']}
        />

        <PhaseCard
          phase="bovenbouw"
          label="Fase 3"
          title="Bovenbouw"
          ages="U14 - U17"
          description="De perfectioneringsfase. Fysieke en mentale ontwikkeling, wedstrijdmentaliteit en voorbereiding op het volwassen voetbal."
          teams={['U14', 'U15', 'U17']}
        />
      </div>
    </section>

    <!-- Contact -->
    <section class="contact">
      <div class="contact__container">
        <ContactCard
          title="Vragen over de sportieve werking?"
          description="Timothy en de leden van de sportieve cel helpen je graag verder!"
          buttonText="timothy@hebojeugd.be"
          buttonHref="mailto:timothy@hebojeugd.be"
          imageSrc="/images/jeugdwerking-contact.png"
          imageAlt="Timothy"
        />
      </div>
    </section>

    <!-- Link naar trainers -->
    <section class="cta">
      <div class="cta__container">
        <h2 class="cta__title">Ontmoet<br class="desktop-break"/>onze trainers</h2>
        <p class="cta__text">Bekijk wie er voor jouw team klaarstaat</p>
        <a href="/trainers" class="cta__button">
          <span>Trainersstaf bekijken</span>
          <span class="cta__arrow">→</span>
        </a>
      </div>
    </section>

  
</BaseLayout>

<style>
  main {
    background: #fafafa;
    color: #1a1a1a;
  }

  .hero {
    background: #1e3264;
    color: #fff;
    padding: 8rem 2rem 4rem;
    text-align: center;
  }

  .hero__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    margin: 0 0 1rem;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    opacity: 0.8;
    margin: 0;
  }

  /* Structure */
  .structure {
    padding: 4rem 2rem;
    background: #fff;
  }

  .structure__container {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Contact */
  .contact {
    padding: 6rem 2rem 4rem;
    background: #fff;
  }

  .contact__container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .contact__container :global(.contact-card) {
    max-width: 100%;
  }

  /* CTA */
  .cta {
    padding: 10rem 8vw;
    background: #c8202f;
    color: #fff;
    position: relative;
    overflow: hidden;
  }

  .cta__container {
    max-width: 1440px;
    margin: 0 auto;
    padding: 0;
  }

  .cta__title {
    font-size: clamp(3rem, 8vw, 7rem);
    font-weight: 800;
    line-height: 1;
    margin: 0 0 1rem 0;
  }

  .desktop-break {
    display: none;
  }

  @media (min-width: 901px) {
    .desktop-break {
      display: inline;
    }
  }

  .cta__text {
    font-size: 1.1rem;
    opacity: 0.9;
    margin: 0 0 2rem;
    max-width: 650px;
  }

  .cta__button {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    background: #fff;
    color: #c8202f;
    padding: 1.2rem 2.5rem;
    text-decoration: none;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .cta__button:hover {
    background: #1a1a1a;
    color: #fff;
    gap: 1.5rem;
  }

  .cta__arrow {
    transition: transform 0.3s ease;
  }

  .cta__button:hover .cta__arrow {
    transform: translateX(5px);
  }

  @media (max-width: 768px) {
    .hero {
      padding: 6rem 1.5rem 3rem;
    }
  }
</style>
