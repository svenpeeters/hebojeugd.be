---
import BaseLayout from '../layouts/BaseLayout.astro';

const events = [
  { date: '30 juli', title: 'Start trainingen', type: 'start' },
  { date: 'Augustus', title: 'Testwedstrijden en toernooien', type: 'event' },
  { date: 'September', title: 'Ploegenvoorstelling', type: 'event' },
  { date: 'Sept - Nov', title: 'Competitie - 1e helft', type: 'competition' },
  { date: '6-7 december', title: 'Kerststal @ Winterweekend Heers', type: 'event' },
  { date: '13 december', title: 'Winterstop', type: 'stop' },
  { date: '17 januari', title: 'Hervatting training en competitie - 2e helft', type: 'start' },
  { date: 'April', title: 'HEBO Jeugd Paastoernooi 2026', type: 'highlight' },
  { date: 'Mei', title: 'Toernooien', type: 'event' },
  { date: 'Begin juni', title: 'Eindeseizoens BBQ', type: 'event' },
  { date: 'Juni', title: 'Einde trainingen - Zomerstop', type: 'stop' },
];

const labels: Record<string, string> = {
  start: 'START',
  event: 'EVENT',
  competition: 'COMPETITIE',
  stop: 'STOP',
  highlight: 'HIGHLIGHT',
};
---

<BaseLayout title="Kalender | VC HEBO Jeugd">
  <section class="hero">
    <div class="hero__container">
      <h1 class="hero__title">Jaarplanning</h1>
      <p class="hero__subtitle">Seizoen 2025-2026</p>
    </div>
  </section>

  <section class="list">
    <div class="list__container">
      {events.map((event) => (
        <article class={`item item--${event.type}`}>
          <div class="item__date">{event.date}</div>
          <div class="item__content">
            <span class="item__label">{labels[event.type] || 'EVENT'}</span>
            <h3 class="item__title">{event.title}</h3>
          </div>
        </article>
      ))}
    </div>
  </section>

  <section class="highlight">
    <div class="highlight__container">
      <a href="/paastoernooi" class="highlight__card">
        <span class="highlight__eyebrow">7-9 april 2026</span>
        <h2 class="highlight__title">Paastoernooi</h2>
        <p class="highlight__text">Meer info over het paastoernooi â†’</p>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  main { background: #fafafa; color: #1a1a1a; }
  .hero { background: #1e3264; color: #fff; padding: 8rem 2rem 4rem; text-align: center; }
  .hero__container { max-width: 800px; margin: 0 auto; }
  .hero__title { font-size: clamp(2.5rem, 6vw, 4rem); font-weight: 900; margin: 0 0 1rem; }
  .hero__subtitle { font-size: 1.1rem; opacity: .85; margin: 0; }

  .list { padding: 4rem 2rem; background: #fff; }
  .list__container { max-width: 900px; margin: 0 auto; display: grid; gap: 1rem; }

  .item { display: grid; grid-template-columns: 180px 1fr; gap: 1rem; background: #f6f7fb; border-radius: 14px; padding: 1rem 1.25rem; box-shadow: 0 2px 10px rgba(0,0,0,.04); }
  .item__date { font-weight: 800; color: #1e3264; align-self: center; }
  .item__label { display: inline-block; font-size: .72rem; letter-spacing: 1.5px; font-weight: 800; color: #c8202f; }
  .item__title { margin: .25rem 0 0; font-size: 1.15rem; color: #1e3264; }

  .item--start { border-left-color: #22c55e; }
  .item--event { border-left-color: #f59e0b; }
  .item--competition { border-left-color: #1e3264; }
  .item--stop { border-left-color: #c8202f; }
  .item--highlight { border-left-color: #c8202f; background: #fff1f2; }

  .highlight { padding: 1rem 2rem 4rem; }
  .highlight__container { max-width: 900px; margin: 0 auto; }
  .highlight__card { display: block; background: #1e3264; color: #fff; border-radius: 16px; text-decoration: none; padding: 2rem; }
  .highlight__eyebrow { font-size: .8rem; letter-spacing: 1.6px; text-transform: uppercase; opacity: .8; }
  .highlight__title { margin: .4rem 0; font-size: 2rem; }
  .highlight__text { margin: 0; opacity: .85; }

  @media (max-width: 700px) {
    .item { grid-template-columns: 1fr; }
    .hero { padding: 6rem 1.5rem 3rem; }
  }
</style>
