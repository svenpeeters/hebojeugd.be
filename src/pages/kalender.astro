---
import BaseLayout from '../layouts/BaseLayout.astro';

const events = [
  { date: '30 juli', title: 'Start trainingen', type: 'start' },
  { date: 'Augustus', title: 'Testwedstrijden en toernooien', type: 'event' },
  { date: 'September', title: 'Ploegenvoorstelling', type: 'event' },
  { date: 'Sept - Nov', title: 'Competitie - 1e helft', type: 'competition' },
  { date: '6-7 december', title: 'Kerststal @ Winterweekend Heers', type: 'event' },
  { date: '13 december', title: 'Winterstop', type: 'stop' },
  { date: '17 januari', title: 'Hervatting training en competitie - 2e helft', type: 'start' },
  { date: 'April', title: 'HEBO Jeugd Paastoernooi 2026', type: 'highlight' },
  { date: 'Mei', title: 'Toernooien', type: 'event' },
  { date: 'Begin juni', title: 'Eindeseizoens BBQ', type: 'event' },
  { date: 'Juni', title: 'Einde trainingen - Zomerstop', type: 'stop' },
];
---

<BaseLayout title="Kalender | VC HEBO Jeugd">
  

    <!-- Hero -->
    <section class="hero">
      <div class="hero__container">
        <h1 class="hero__title">Jaarplanning</h1>
        <p class="hero__subtitle">Seizoen 2025-2026</p>
      </div>
    </section>

    <!-- Timeline -->
    <section class="timeline">
      <div class="timeline__container">
        <div class="timeline__line"></div>
        
        {events.map((event, i) => (
          <div class={`timeline__item timeline__item--${event.type}`}>
            <div class="timeline__marker"></div>
            <div class="timeline__content">
              <span class="timeline__date">{event.date}</span>
              <h3 class="timeline__title">{event.title}</h3>
            </div>
          </div>
        ))}
        
      </div>
    </section>

    <!-- Highlight: Paastoernooi -->
    <section class="highlight">
      <div class="highlight__container">
        <div class="highlight__card">
          <span class="highlight__eyebrow">7-9 april 2026</span>
          <h2 class="highlight__title">Paastoernooi</h2>
          <p class="highlight__text">Het grootste evenement van het jaar! U6 t/m U13, 3 avonden voetbalplezier.</p>
          <a href="/paastoernooi" class="highlight__button">Meer info â†’</a>
        </div>
      </div>
    </section>

  
</BaseLayout>

<style>
  main {
    background: #fafafa;
    color: #1a1a1a;
  }

  .hero {
    background: linear-gradient(135deg, #1e3264 0%, #0a0f1a 100%);
    color: #fff;
    padding: 8rem 2rem 4rem;
    text-align: center;
  }

  .hero__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    margin: 0 0 1rem;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    opacity: 0.8;
    margin: 0;
  }

  /* Timeline */
  .timeline {
    padding: 4rem 2rem;
    background: #fff;
  }

  .timeline__container {
    max-width: 700px;
    margin: 0 auto;
    position: relative;
    padding-left: 3rem;
  }

  .timeline__line {
    position: absolute;
    left: 0.45rem;
    top: 1.75rem;
    bottom: 1.75rem;
    width: 3px;
    background: #1e3264;
    border-radius: 2px;
  }

  .timeline__item {
    position: relative;
    padding: 1.5rem 0;
    padding-left: 2rem;
  }

  .timeline__marker {
    position: absolute;
    left: -2.125rem;
    top: 1.75rem;
    width: 1rem;
    height: 1rem;
    background: #fff;
    border: 3px solid #1e3264;
    border-radius: 50%;
    z-index: 1;
  }

  .timeline__item--start .timeline__marker { border-color: #4ade80; background: #4ade80; }
  .timeline__item--event .timeline__marker { border-color: #f59e0b; }
  .timeline__item--competition .timeline__marker { border-color: #1e3264; background: #1e3264; }
  .timeline__item--stop .timeline__marker { border-color: #c8202f; background: #c8202f; }
  .timeline__item--highlight .timeline__marker { 
    border-color: #c8202f; 
    background: #c8202f;
    width: 1.25rem;
    height: 1.25rem;
    left: -2.25rem;
    top: 1.625rem;
  }

  .timeline__content {
    background: #fafafa;
    padding: 1.25rem 1.5rem;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
  }

  .timeline__item:hover .timeline__content {
    background: #f0f0f0;
    transform: translateX(5px);
  }

  .timeline__item--highlight .timeline__content {
    background: #c8202f;
    color: #fff;
  }

  .timeline__item--highlight:hover .timeline__content {
    background: #b01c29;
  }

  .timeline__date {
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #c8202f;
  }

  .timeline__item--highlight .timeline__date {
    color: rgba(255,255,255,0.8);
  }

  .timeline__title {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0.25rem 0 0;
    color: #1e3264;
  }

  .timeline__item--highlight .timeline__title {
    color: #fff;
  }

  /* Highlight */
  .highlight {
    padding: 4rem 2rem;
  }

  .highlight__container {
    max-width: 700px;
    margin: 0 auto;
  }

  .highlight__card {
    background: linear-gradient(135deg, #1e3264, #0a0f1a);
    color: #fff;
    padding: 3rem;
    border-radius: 1.5rem;
    text-align: center;
  }

  .highlight__eyebrow {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    opacity: 0.7;
  }

  .highlight__title {
    font-size: 2.5rem;
    font-weight: 900;
    margin: 0.5rem 0 1rem;
  }

  .highlight__text {
    font-size: 1.1rem;
    opacity: 0.8;
    margin: 0 0 2rem;
  }

  .highlight__button {
    display: inline-block;
    background: #c8202f;
    color: #fff;
    padding: 1rem 2rem;
    text-decoration: none;
    font-weight: 700;
    border-radius: 4px;
    transition: all 0.3s ease;
  }

  .highlight__button:hover {
    background: #fff;
    color: #c8202f;
  }

  @media (max-width: 600px) {
    .hero {
      padding: 6rem 1.5rem 3rem;
    }

    .timeline__container {
      padding-left: 2.5rem;
    }

    .highlight__card {
      padding: 2rem;
    }

    .highlight__title {
      font-size: 2rem;
    }
  }
</style>
