import TrainersGroup from '../components/TrainersGroup.astro';

const trainers = {
  onderbouw: [
    { team: 'U5', name: 'Claudine Hartjesveld', phone: '0478 81 30 94' },
    { team: 'U6', name: 'Kenji Jossa', phone: '0468 01 16 73' },
    { team: 'U7', name: 'Timothy Fontaine', phone: '0496 21 24 41' },
    { team: 'U9', name: 'Dave Daniels', phone: '0486 62 83 52' },
  ],
  middenbouw: [
    { team: 'U10', name: 'Willy Missotten', phone: '0478 81 30 94' },
    { team: 'U10', name: 'Jurgen Polders', phone: '0499 82 01 41' },
    { team: 'U11/12', name: 'Andy Bex', phone: '0490 58 23 12' },
    { team: 'U11/12', name: 'Frank Missotten', phone: '0469 65 82 72' },
  ],
  bovenbouw: [
    { team: 'U15', name: 'Jean-Marie Cloesen', phone: '0498 48 80 92' },
    { team: 'U15', name: 'Roger Vanhaeren', phone: '0476 27 77 62' },
    { team: 'U17', name: 'Joeri Fontaine', phone: '0488 49 67 10' },
  ],
  keepers: [
    { team: 'ðŸ§¤ Alle teams', name: 'Gilles Vanswijgenhoven', phone: '0471 91 34 82' },
  ],
};
---

<BaseLayout title="Trainersstaf | VC HEBO Jeugd">
  

    <!-- Hero -->
    <section class="hero">
      <div class="hero__container">
        <h1 class="hero__title">Trainersstaf</h1>
        <p class="hero__subtitle">De mensen die elke week het beste uit onze spelers halen</p>
      </div>
    </section>

    <!-- Trainers -->
    <section class="trainers">
      <div class="trainers__container">
        
        <TrainersGroup
          title="Onderbouw"
          ageRange="U5 - U9"
          color="green"
          trainers={trainers.onderbouw}
        />

        <TrainersGroup
          title="Middenbouw"
          ageRange="U10 - U13"
          color="orange"
          trainers={trainers.middenbouw}
        />

        <TrainersGroup
          title="Bovenbouw"
          ageRange="U14 - U17"
          color="red"
          trainers={trainers.bovenbouw}
        />

        <TrainersGroup
          title="Keeperstrainer"
          ageRange="Alle teams"
          color="navy"
          trainers={trainers.keepers}
          featured
        />

      </div>
    </section>

  
</BaseLayout>

<style>
  main {
    background: #fafafa;
    color: #1a1a1a;
  }

  .hero {
    background: #1e3264;
    color: #fff;
    padding: 8rem 2rem 4rem;
    text-align: center;
  }

  .hero__container {
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
    font-weight: 900;
    margin: 0 0 1rem;
  }

  .hero__subtitle {
    font-size: 1.2rem;
    opacity: 0.8;
    margin: 0;
  }

  /* Trainers */
  .trainers {
    padding: 4rem 2rem;
    background: #fff;
  }

  .trainers__container {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  @media (max-width: 600px) {
    .hero {
      padding: 6rem 1.5rem 3rem;
    }
  }
</style>
