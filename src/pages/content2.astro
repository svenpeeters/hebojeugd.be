---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import PaastoernooiTicker from '../components/PaastoernooiTicker.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Nieuws | VC HEBO Jeugd">
  <main>
    <Navbar />
    <PaastoernooiTicker />

    <!-- Stacked Strips -->
    <section class="strip strip--hero">
      <div class="strip__number">001</div>
      <div class="strip__content">
        <h1 class="strip__title">PAAS<br/>TOER<br/>NOOI</h1>
      </div>
      <div class="strip__meta">
        <span>7—9</span>
        <span>APR</span>
        <span>2026</span>
      </div>
      <div class="strip__action">
        <a href="/paastoernooi">Inschrijven →</a>
      </div>
    </section>

    <section class="strip">
      <div class="strip__number">002</div>
      <div class="strip__content">
        <span class="strip__label">Club nieuws</span>
        <h2 class="strip__heading">Nieuwe trainingsuren vanaf februari</h2>
      </div>
      <div class="strip__date">15.01.26</div>
    </section>

    <section class="strip strip--inverted">
      <div class="strip__number">003</div>
      <div class="strip__content">
        <span class="strip__label">Terugblik</span>
        <h2 class="strip__heading">Eindejaarstoernooi: 200+ spelers</h2>
      </div>
      <div class="strip__date">10.01.26</div>
    </section>

    <section class="strip">
      <div class="strip__number">004</div>
      <div class="strip__content">
        <span class="strip__label">Oproep</span>
        <h2 class="strip__heading">Vrijwilligers gezocht voor april</h2>
      </div>
      <div class="strip__date">05.01.26</div>
    </section>

    <section class="strip strip--red">
      <div class="strip__number">005</div>
      <div class="strip__content">
        <span class="strip__label">Manifest</span>
        <h2 class="strip__heading">Geen geschreeuw. Geen druk. Wel plezier.</h2>
      </div>
      <div class="strip__date">Altijd</div>
    </section>

    <section class="strip">
      <div class="strip__number">006</div>
      <div class="strip__content">
        <span class="strip__label">Vooruitblik</span>
        <h2 class="strip__heading">Seizoen 2026: De plannen</h2>
      </div>
      <div class="strip__date">01.01.26</div>
    </section>

    <Footer />
  </main>
</Layout>

<style>
  main {
    background: #f5f5f5;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding-top: 70px;
  }

  @media (max-width: 768px) {
    main {
      padding-top: 60px;
    }
  }

  .strip {
    display: grid;
    grid-template-columns: 100px 1fr auto auto;
    align-items: center;
    gap: 2rem;
    padding: 2rem calc((100% - 1440px) / 2 + 3rem);
    border-bottom: 1px solid #1e3264;
    background: #f5f5f5;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @media (max-width: 1500px) {
    .strip {
      padding: 2rem 3rem;
    }
  }

  .strip:hover {
    background: #1e3264;
    color: #fff;
    padding-left: calc((100% - 1440px) / 2 + 4rem);
  }

  @media (max-width: 1500px) {
    .strip:hover {
      padding-left: 4rem;
    }
  }

  .strip:hover .strip__label {
    color: #c8202f;
  }

  .strip--hero {
    padding: 6rem calc((100% - 1440px) / 2 + 3rem);
    background: #1e3264;
    color: #fff;
  }

  @media (max-width: 1500px) {
    .strip--hero {
      padding: 6rem 3rem;
    }
  }

  .strip--hero:hover {
    background: #c8202f;
  }

  .strip--inverted {
    background: #1e3264;
    color: #fff;
  }

  .strip--inverted:hover {
    background: #fff;
    color: #1e3264;
  }

  .strip--red {
    background: #c8202f;
    color: #fff;
  }

  .strip--red:hover {
    background: #1e3264;
  }

  .strip__number {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 2px;
    opacity: 0.4;
  }

  .strip__content {
    flex: 1;
  }

  .strip__title {
    font-size: clamp(4rem, 15vw, 12rem);
    font-weight: 900;
    line-height: 0.8;
    margin: 0;
    letter-spacing: -5px;
  }

  .strip__label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    color: #c8202f;
    display: block;
    margin-bottom: 0.5rem;
  }

  .strip--inverted .strip__label,
  .strip--red .strip__label {
    color: #fff;
    opacity: 0.6;
  }

  .strip__heading {
    font-size: clamp(1.5rem, 4vw, 3rem);
    font-weight: 800;
    margin: 0;
    letter-spacing: -1px;
  }

  .strip__meta {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 1.5rem;
    font-weight: 900;
    line-height: 1.1;
  }

  .strip__date {
    font-size: 0.85rem;
    font-weight: 600;
    opacity: 0.5;
    min-width: 80px;
    text-align: right;
  }

  .strip__action a {
    display: inline-block;
    padding: 1rem 2rem;
    border: 2px solid #fff;
    color: #fff;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.85rem;
    letter-spacing: 1px;
    transition: all 0.2s;
  }

  .strip__action a:hover {
    background: #fff;
    color: #1e3264;
  }

  @media (max-width: 768px) {
    .strip {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 2rem;
    }

    .strip:hover {
      padding-left: 2rem;
    }

    .strip__number {
      order: -1;
    }

    .strip__meta {
      flex-direction: row;
      gap: 0.5rem;
    }

    .strip__date {
      text-align: left;
    }
  }
</style>
