---
const footerLinks = {
  club: [
    { label: 'Over ons', href: '#' },
    { label: 'Bestuur', href: '#' },
    { label: 'Geschiedenis', href: '#' },
    { label: 'Contact', href: '#' },
  ],
  teams: [
    { label: 'Alle teams', href: '#' },
    { label: 'Trainers', href: '#' },
    { label: 'Wedstrijden', href: 'https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden' },
    { label: 'Klassementen', href: 'https://www.voetbalvlaanderen.be/club/9732/klassement' },
  ],
  info: [
    { label: 'Inschrijven', href: '#' },
    { label: 'Lidgeld', href: '#' },
    { label: 'Kledij', href: '#' },
    { label: 'Documenten', href: '#' },
  ],
  volg: [
    { label: 'Facebook', href: '#' },
    { label: 'Instagram', href: '#' },
    { label: 'Voetbal Vlaanderen', href: 'https://www.voetbalvlaanderen.be/club/9732' },
  ],
};

const sponsors = [
  { name: 'KwadrO', logo: '/sponsors/kwadro.png' },
  { name: 'Schilderwerken Hermans', logo: '/sponsors/schilderwerken-hermans.png' },
  { name: 'Groep Hendrickx', logo: '/sponsors/groep-hendrickx.png' },
  { name: 'Tom Feytons', logo: '/sponsors/tom-feytons.png' },
  { name: 'MCB Events', logo: '/sponsors/mcb-events.png' },
  { name: 'Stevens Houttechniek', logo: '/sponsors/stevens-houttechniek.png' },
  { name: 'Fyto Vrancken', logo: '/sponsors/fyto-vrancken.png' },
  { name: 'SEE-IT', logo: '/sponsors/see-it.png' },
  { name: 'Advivo', logo: '/sponsors/advivo.png' },
  { name: 'Joris', logo: '/sponsors/joris.png' },
  { name: 'Drankenhandel GOS', logo: '/sponsors/drankenhandel-gos.png' },
  { name: 'Glowww', logo: '/sponsors/glowww.png' },
];

const legalLinks = [
  { label: 'Privacy', href: '#' },
  { label: 'Cookies', href: '#' },
  { label: 'Gedragscode', href: '#' },
];
---

<footer class="footer">
  <!-- Main Footer -->
  <div class="footer-main">
    <div class="footer-brand">
      <img src="/logo.png" alt="HEBO Jeugd" class="footer-logo" />
      <p class="footer-tagline">Samen sterk sinds 2024</p>
      <div class="footer-socials">
        <a href="#" class="social-link" aria-label="Facebook">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
        </a>
        <a href="#" class="social-link" aria-label="Instagram">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
        </a>
      </div>
    </div>

    <div class="footer-links">
      <div class="footer-column">
        <h4>Club</h4>
        <ul>
          {footerLinks.club.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-column">
        <h4>Teams</h4>
        <ul>
          {footerLinks.teams.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-column">
        <h4>Info</h4>
        <ul>
          {footerLinks.info.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      <div class="footer-column">
        <h4>Volg ons</h4>
        <ul>
          {footerLinks.volg.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-bottom">
    <div class="footer-legal">
      {legalLinks.map((link, i) => (
        <>
          <a href={link.href}>{link.label}</a>
          {i < legalLinks.length - 1 && <span class="divider">|</span>}
        </>
      ))}
    </div>
    <p class="footer-copyright">
      © 2026 VC HEBO Jeugd — Stamnr. 09827 — Heers & Bovelingen
    </p>
  </div>
</footer>

<style>
  .footer {
    background: #0d1a33;
    overflow: hidden;
  }

  /* Sponsors */
  .sponsors {
    background: var(--white);
    padding: 2.5rem 2rem;
    text-align: center;
  }
  .sponsors-title {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--navy);
    opacity: 0.5;
    margin-bottom: 1rem;
  }
  .sponsors-grid {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 3rem;
    flex-wrap: wrap;
    max-width: 1400px;
    margin: 0 auto;
  }
  .sponsor {
    text-decoration: none;
    opacity: 0.6;
    transition: opacity 0.2s;
  }
  .sponsor:hover {
    opacity: 1;
  }
  .sponsor-logo {
    height: 70px;
    width: auto;
    max-width: 180px;
    object-fit: contain;
    filter: grayscale(100%);
    transition: filter 0.2s;
  }
  .sponsor:hover .sponsor-logo {
    filter: grayscale(0%);
  }

  /* Main Footer */
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
    padding: 3rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }
  .footer-brand {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  .footer-logo {
    width: 80px;
    margin-bottom: 1rem;
  }
  .footer-tagline {
    font-size: 0.9rem;
    opacity: 0.6;
    margin-bottom: 1.5rem;
  }
  .footer-socials {
    display: flex;
    gap: 1rem;
  }
  .social-link {
    width: 40px;
    height: 40px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    transition: background 0.2s;
  }
  .social-link:hover {
    background: var(--red);
  }
  .social-link svg {
    width: 18px;
    height: 18px;
  }

  /* Footer Links */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
  }
  .footer-column h4 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 1.2rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    margin-bottom: 1rem;
    color: var(--white);
  }
  .footer-column ul {
    list-style: none;
  }
  .footer-column li {
    margin-bottom: 0.5rem;
  }
  .footer-column a {
    color: var(--white);
    opacity: 0.6;
    text-decoration: none;
    font-size: 0.9rem;
    transition: opacity 0.2s;
  }
  .footer-column a:hover {
    opacity: 1;
  }

  /* Bottom Bar */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 3rem;
    font-size: 0.8rem;
    color: var(--white);
    opacity: 0.5;
  }
  .footer-legal {
    display: flex;
    gap: 0.5rem;
  }
  .footer-legal a {
    color: var(--white);
    text-decoration: none;
    transition: opacity 0.2s;
  }
  .footer-legal a:hover {
    opacity: 0.8;
  }
  .divider {
    opacity: 0.3;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr;
      text-align: center;
    }
    .footer-brand {
      align-items: center;
    }
    .footer-links {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 600px) {
    .footer-main {
      padding: 2rem 1.5rem;
    }
    .footer-links {
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
    }
    .footer-bottom {
      flex-direction: column;
      gap: 0.5rem;
      padding: 1.5rem;
      text-align: center;
    }
    .sponsors-grid {
      gap: 1.5rem;
    }
  }
</style>
