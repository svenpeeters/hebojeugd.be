---
import matches from '../data/matches.json';

const upcomingMatches = matches;
---

<footer class="footer">
  <div class="footer__grid">
    <div class="footer__col footer__col--brand">
      <img src="/logo.png" alt="HEBO Jeugd" class="footer__logo" />
      <p class="footer__manifesto">
        Geboren uit fusie.<br/>
        <span>Gedreven door passie.</span>
      </p>
    </div>
    
    <div class="footer__col">
      <h4>Navigate</h4>
      <a href="/" class="footer__link">Home</a>
      <a href="/paastoernooi" class="footer__link">Paastoernooi</a>
      <a href="mailto:info@hebojeugd.be" class="footer__link">Contact</a>
    </div>
    
    <div class="footer__col">
      <h4>Extern</h4>
      <a href="https://www.voetbalvlaanderen.be/club/9732" target="_blank" class="footer__link">Voetbal Vlaanderen ↗</a>
      <a href="https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden" target="_blank" class="footer__link">Wedstrijden ↗</a>
    </div>
    
    <div class="footer__col">
      <h4>Sociaal</h4>
      <a href="https://www.facebook.com/share/1AJQuHjTBZ/" target="_blank" class="footer__link">Facebook ↗</a>
    </div>
  </div>
  
  <div class="footer__bottom">
    <div class="footer__stamp">STAMNR 09827</div>
    <div class="footer__copy">© 2026</div>
  </div>
  
  <div class="footer__ticker">
    <div class="footer__ticker-track">
      {[...upcomingMatches, ...upcomingMatches].map(match => (
        <div class="footer__ticker-item">
          <span class="footer__ticker-team">{match.team}</span>
          <span class="footer__ticker-match">{match.isHome ? match.away : match.home}</span>
          <span class="footer__ticker-date">{new Date(match.date).toLocaleDateString('nl-BE', { day: 'numeric', month: 'short' })} • {match.time}</span>
          <span class="footer__ticker-badge">{match.isHome ? 'THUIS' : 'UIT'}</span>
          <span class="footer__ticker-divider">◆</span>
        </div>
      ))}
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #141f3d;
    color: #fff;
    padding: 8rem 8vw 0;
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 4rem;
    padding-bottom: 6rem;
    border-bottom: 1px solid #222;
    max-width: 1440px;
    margin: 0 auto;
  }

  .footer__col h4 {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 3px;
    opacity: 0.4;
    margin-bottom: 2rem;
  }

  .footer__col--brand {
    padding-right: 4rem;
  }

  .footer__logo {
    width: 31%;
    max-width: 300px;
    margin-bottom: 2rem;
  }

  .footer__manifesto {
    font-size: 1.5rem;
    line-height: 1.4;
    margin: 0;
    color: #fff;
  }

  .footer__manifesto span {
    color: #c8202f;
    font-weight: 700;
  }

  .footer__link {
    display: block;
    color: #fff;
    text-decoration: none;
    font-size: 1.3rem;
    font-weight: 600;
    margin-bottom: 1rem;
    transition: all 0.2s ease;
  }

  .footer__link:hover {
    color: #c8202f;
    transform: translateX(10px);
  }

  .footer__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 3rem 0;
    max-width: 1440px;
    margin: 0 auto;
  }

  .footer__stamp {
    font-size: 0.75rem;
    letter-spacing: 4px;
    opacity: 0.3;
  }

  .footer__copy {
    font-size: 0.85rem;
    opacity: 0.3;
  }

  /* Ticker */
  .footer__ticker {
    background: #2a4080;
    margin: 0 -8vw;
    padding: 1.5rem 0;
    overflow: hidden;
  }

  .footer__ticker-track {
    display: flex;
    animation: footerTicker 20s linear infinite;
    white-space: nowrap;
  }

  @keyframes footerTicker {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .footer__ticker-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0 1rem;
    color: #fff;
  }

  .footer__ticker-team {
    font-size: 0.7rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #c8202f;
    background: #fff;
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .footer__ticker-badge {
    font-size: 0.6rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    opacity: 0.5;
  }

  .footer__ticker-match {
    font-size: 1rem;
    font-weight: 600;
  }

  .footer__ticker-date {
    font-size: 0.85rem;
    opacity: 0.5;
  }

  .footer__ticker-divider {
    font-size: 0.5rem;
    opacity: 0.3;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .footer {
      padding: 4rem 2rem 0;
    }

    .footer__grid {
      grid-template-columns: 1fr;
      gap: 3rem;
      text-align: center;
    }

    .footer__col--brand {
      padding-right: 0;
    }

    .footer__link {
      font-size: 1.1rem;
    }

    .footer__link:hover {
      transform: none;
    }

    .footer__bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer__ticker {
      margin: 0 -2rem;
    }

    .footer__ticker-track {
      animation: footerTicker 10s linear infinite;
    }
  }
</style>
