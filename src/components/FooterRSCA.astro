---
const navLinks = [
  { label: 'Wedstrijden', href: 'https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden' },
  { label: 'Teams', href: '#' },
  { label: 'Club', href: '#' },
  { label: 'Contact', href: '#' },
];

const socialLinks = [
  { label: 'Facebook', href: '#', icon: 'facebook' },
  { label: 'Instagram', href: '#', icon: 'instagram' },
];

const legalLinks = [
  { label: 'Privacy', href: '#' },
  { label: 'Cookies', href: '#' },
  { label: 'Gedragscode', href: '#' },
];
---

<footer class="footer-rsca">
  <!-- Top Section -->
  <div class="footer-top">
    <div class="footer-brand">
      <img src="/logo.png" alt="HEBO Jeugd" class="footer-logo" />
    </div>
    
    <nav class="footer-nav">
      {navLinks.map(link => (
        <a href={link.href} class="nav-link">{link.label}</a>
      ))}
    </nav>

    <div class="footer-socials">
      <a href="#" class="social-btn" aria-label="Facebook">
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
      </a>
      <a href="#" class="social-btn" aria-label="Instagram">
        <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
      </a>
    </div>
  </div>

  <!-- Divider -->
  <div class="footer-divider"></div>

  <!-- Bottom Section -->
  <div class="footer-bottom">
    <div class="footer-legal">
      {legalLinks.map((link, i) => (
        <>
          <a href={link.href}>{link.label}</a>
          {i < legalLinks.length - 1 && <span>•</span>}
        </>
      ))}
    </div>
    <p class="footer-copyright">
      © 2026 VC HEBO Jeugd • Stamnr. 09827
    </p>
  </div>
</footer>

<style>
  .footer-rsca {
    grid-column: span 12;
    background: linear-gradient(180deg, #0a1628 0%, #050d18 100%);
    border-radius: 24px 24px 0 0;
    margin-top: 1rem;
    padding: 0;
  }

  /* Top Section */
  .footer-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 3rem;
  }

  .footer-brand {
    flex-shrink: 0;
  }

  .footer-logo {
    height: 60px;
    width: auto;
  }

  /* Navigation */
  .footer-nav {
    display: flex;
    gap: 2.5rem;
  }

  .nav-link {
    color: var(--white);
    text-decoration: none;
    font-size: 0.95rem;
    font-weight: 500;
    opacity: 0.7;
    transition: opacity 0.2s;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .nav-link:hover {
    opacity: 1;
  }

  /* Socials */
  .footer-socials {
    display: flex;
    gap: 0.75rem;
  }

  .social-btn {
    width: 44px;
    height: 44px;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    transition: all 0.2s;
  }

  .social-btn:hover {
    background: var(--red);
    border-color: var(--red);
  }

  .social-btn svg {
    width: 18px;
    height: 18px;
  }

  /* Divider */
  .footer-divider {
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
    margin: 0 3rem;
  }

  /* Bottom Section */
  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 3rem;
  }

  .footer-legal {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-legal a {
    color: var(--white);
    text-decoration: none;
    font-size: 0.8rem;
    opacity: 0.5;
    transition: opacity 0.2s;
  }

  .footer-legal a:hover {
    opacity: 0.8;
  }

  .footer-legal span {
    color: var(--white);
    opacity: 0.2;
    font-size: 0.6rem;
  }

  .footer-copyright {
    font-size: 0.8rem;
    color: var(--white);
    opacity: 0.4;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .footer-top {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-nav {
      flex-wrap: wrap;
      justify-content: center;
      gap: 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }

  @media (max-width: 600px) {
    .footer-top {
      padding: 2rem 1.5rem;
    }

    .footer-bottom {
      padding: 1.5rem;
    }

    .footer-divider {
      margin: 0 1.5rem;
    }

    .nav-link {
      font-size: 0.85rem;
    }
  }
</style>
