---
interface Props {
  team: string;
  name: string;
  featured?: boolean;
}

const { team, name, featured = false } = Astro.props;
---

<div class:list={["trainer-card", { "trainer-card--featured": featured }]}>
  <span class="trainer-card__team">{team}</span>
  <span class="trainer-card__name">{name}</span>
</div>

<style>
  .trainer-card {
    background: #fff;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .trainer-card--featured {
    background: #f8fafc;
  }

  .trainer-card__team {
    font-size: 0.8rem;
    font-weight: 700;
    color: #c8202f;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .trainer-card__name {
    font-size: 1.1rem;
    font-weight: 700;
    color: #1e3264;
  }

</style>
