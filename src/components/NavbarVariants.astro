  .nav-trigger__icon span:last-child { width: 60%; }

  .nav-fullscreen {
    position: fixed;
    inset: 0;
    z-index: 999;
    pointer-events: none;
    opacity: 0;
    visibility: hidden;
  }

  .nav-fullscreen--open {
    pointer-events: all;
    opacity: 1;
    visibility: visible;
  }

  .nav-fullscreen__bg {
    position: absolute;
    inset: 0;
    background: #0a0f1a;
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav-fullscreen--open .nav-fullscreen__bg { transform: scaleX(1); }

  .nav-fullscreen__content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    padding: 4rem 10vw;
  }

  .nav-fullscreen__link {
    display: flex;
    align-items: baseline;
    gap: 2rem;
    color: #fff;
    text-decoration: none;
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 900;
    padding: 0.5rem 0;
    opacity: 0;
    transform: translateX(60px);
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .nav-fullscreen--open .nav-fullscreen__link {
    opacity: 1;
    transform: translateX(0);
  }

  .nav-fullscreen--open .nav-fullscreen__link:nth-child(1) { transition-delay: 0.15s; }
  .nav-fullscreen--open .nav-fullscreen__link:nth-child(2) { transition-delay: 0.2s; }
  .nav-fullscreen--open .nav-fullscreen__link:nth-child(3) { transition-delay: 0.25s; }
  .nav-fullscreen--open .nav-fullscreen__link:nth-child(4) { transition-delay: 0.3s; }

  .nav-fullscreen__link::before {
    content: attr(data-num);
    font-size: 0.9rem;
    color: #c8202f;
  }

  .nav-fullscreen__link:hover { color: #c8202f; }

  .nav-fullscreen__footer {
    position: absolute;
    bottom: 3rem;
    left: 10vw;
    display: flex;
    align-items: center;
    gap: 1rem;
    color: rgba(255,255,255,0.5);
    font-size: 0.85rem;
    opacity: 0;
    transition: opacity 0.4s 0.35s;
  }

  .nav-fullscreen--open .nav-fullscreen__footer { opacity: 1; }
  .nav-fullscreen__footer img { height: 40px; opacity: 0.7; }

  .nav-close {
    position: absolute;
    top: 2rem;
    right: 2rem;
    width: 50px;
    height: 50px;
    background: none;
    border: 2px solid rgba(255,255,255,0.3);
