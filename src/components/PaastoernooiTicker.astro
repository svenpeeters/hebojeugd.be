---
interface Props {
  href?: string;
}

const { href = '/paastoernooi' } = Astro.props;
---

<a href={href} class="paastoernooi-ticker">
  <div class="paastoernooi-ticker__track">
    {[...Array(8)].map(() => (
      <div class="paastoernooi-ticker__item">
        <span class="paastoernooi-ticker__highlight">PAASTOERNOOI 2026</span>
        <span class="paastoernooi-ticker__divider">◆</span>
        <span>7-9 APRIL</span>
        <span class="paastoernooi-ticker__divider">◆</span>
        <span>U6 T/M U13</span>
        <span class="paastoernooi-ticker__divider">◆</span>
      </div>
    ))}
  </div>
</a>

<style>
  .paastoernooi-ticker {
    display: block;
    background: #c8202f;
    padding: 1.25rem 0;
    overflow: hidden;
    text-decoration: none;
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .paastoernooi-ticker:hover {
    background: #a81828;
  }

  .paastoernooi-ticker__track {
    display: flex;
    animation: paastoernooi-ticker-scroll 20s linear infinite;
    white-space: nowrap;
  }

  @keyframes paastoernooi-ticker-scroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  .paastoernooi-ticker__item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0 1.5rem;
    color: #fff;
    font-size: 0.85rem;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
  }

  .paastoernooi-ticker__highlight {
    color: #fff;
  }

  .paastoernooi-ticker__divider {
    opacity: 0.5;
    font-size: 0.6rem;
  }

  @media (max-width: 900px) {
    .paastoernooi-ticker__track {
      animation-duration: 12s;
    }

    .paastoernooi-ticker__item {
      font-size: 0.75rem;
      gap: 0.75rem;
      padding: 0 1rem;
    }
  }
</style>
