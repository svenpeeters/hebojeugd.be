      { label: 'U6', href: '#' },
      { label: 'U7', href: '#' },
      { label: 'U9', href: '#' },
      { label: 'U10', href: '#' },
      { label: 'U11', href: '#' },
      { label: 'U12', href: '#' },
      { label: 'U15', href: '#' },
      { label: 'U17', href: '#' },
    ]
  },
  {
    title: 'Club',
    links: [
      { label: 'Over ons', href: '#' },
      { label: 'Bestuur', href: '#' },
      { label: 'Geschiedenis', href: '#' },
      { label: 'Trainers', href: '#' },
    ]
  },
  {
    title: 'Info',
    links: [
      { label: 'Inschrijven', href: '#' },
      { label: 'Lidgeld', href: '#' },
      { label: 'Kledij', href: '#' },
      { label: 'Documenten', href: '#' },
    ]
  },
  {
    title: 'Wedstrijden',
    links: [
      { label: 'Kalender', href: 'https://www.voetbalvlaanderen.be/club/9732/komende-wedstrijden' },
      { label: 'Uitslagen', href: 'https://www.voetbalvlaanderen.be/club/9732/uitslagen' },
      { label: 'Klassementen', href: 'https://www.voetbalvlaanderen.be/club/9732/klassement' },
