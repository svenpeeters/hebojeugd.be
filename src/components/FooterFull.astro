    <!-- Right Section - Newsletter -->
    <div class="footer-full__right">
      <div class="footer-full__newsletter-content">
        <h3>Blijf op de hoogte</h3>
        <p>Ontvang nieuws, wedstrijdinfo en updates rechtstreeks in je mailbox.</p>
        <a href="#" class="footer-full__newsletter-btn">Inschrijven</a>
      </div>
      <div class="footer-full__newsletter-pattern"></div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer-full__bottom">
    <p class="footer-full__copyright">© 2026 VC HEBO Jeugd</p>
    <div class="footer-full__legal-links">
      {legalLinks.map((link, i) => (
        <>
          <a href={link.href}>{link.label}</a>
          {i < legalLinks.length - 1 && <span>·</span>}
        </>
      ))}
    </div>
  </div>
</footer>

<style>
  .footer-full {
    grid-column: span 12;
    background: #0d1a33;
    border-radius: 24px 24px 0 0;
    margin-top: 1rem;
    overflow: hidden;
  }

  .footer-full__container {
    display: grid;
    grid-template-columns: 1fr 400px;
  }

  /* Left Section */
  .footer-full__left {
    padding: 3rem;
  }

  .footer-full__brand {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 2.5rem;
  }

  .footer-full__logo {
    width: 70px;
    height: auto;
  }

  .footer-full__info {
    padding-top: 0.25rem;
  }

  .footer-full__club-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--white);
    margin-bottom: 0.25rem;
  }

  .footer-full__club-address {
    font-size: 0.8rem;
    color: var(--white);
    opacity: 0.5;
    line-height: 1.4;
  }

  /* Columns */
  .footer-full__columns {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .footer-full__column h4 {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--white);
    margin-bottom: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-full__column ul {
    list-style: none;
  }

  .footer-full__column li {
    margin-bottom: 0.4rem;
  }

  .footer-full__column a {
    font-size: 0.8rem;
    color: var(--white);
    opacity: 0.5;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .footer-full__column a:hover {
    opacity: 1;
  }

  /* Social Section */
  .footer-full__social-section {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-full__social-label {
    font-size: 0.75rem;
    color: var(--white);
    opacity: 0.5;
  }

  .footer-full__social-icons {
    display: flex;
    gap: 0.75rem;
  }

  .footer-full__social-icons a {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
    opacity: 0.6;
    transition: opacity 0.2s;
  }

  .footer-full__social-icons a:hover {
    opacity: 1;
  }

  .footer-full__social-icons svg {
    width: 18px;
    height: 18px;
  }

  /* Right Section - Newsletter */
  .footer-full__right {
    background: var(--red);
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    overflow: hidden;
  }

  .footer-full__newsletter-pattern {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.03);
    pointer-events: none;
  }

  .footer-full__newsletter-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 280px;
  }

  .footer-full__newsletter-content h3 {
    font-family: 'Bebas Neue', sans-serif;
    font-size: 2rem;
    color: var(--white);
    text-transform: uppercase;
    letter-spacing: 2px;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  .footer-full__newsletter-content p {
    font-size: 0.85rem;
    color: var(--white);
    opacity: 0.7;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  .footer-full__newsletter-btn {
    display: inline-block;
    background: transparent;
    color: var(--white);
    border: 1px solid var(--white);
    padding: 0.6rem 1.5rem;
    border-radius: 4px;
    font-size: 0.8rem;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: all 0.2s;
  }

  .footer-full__newsletter-btn:hover {
    background: var(--white);
    color: var(--red);
  }

  /* Bottom Bar */
  .footer-full__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 3rem;
    background: rgba(0,0,0,0.2);
    font-size: 0.75rem;
    color: var(--white);
  }

  .footer-full__copyright {
    opacity: 0.4;
  }

  .footer-full__legal-links {
    display: flex;
    gap: 0.5rem;
    opacity: 0.4;
  }

  .footer-full__legal-links a {
    color: var(--white);
    text-decoration: none;
  }

  .footer-full__legal-links a:hover {
    text-decoration: underline;
  }

  .footer-full__legal-links span {
    opacity: 0.5;
  }

  /* Responsive */
  @media (max-width: 1100px) {
    .footer-full__container {
      grid-template-columns: 1fr;
    }

    .footer-full__columns {
      grid-template-columns: repeat(3, 1fr);
    }

    .footer-full__right {
      padding: 2.5rem;
    }
  }

  @media (max-width: 700px) {
    .footer-full__left {
      padding: 2rem 1.5rem;
    }

    .footer-full__columns {
      grid-template-columns: repeat(2, 1fr);
    }

    .footer-full__bottom {
      flex-direction: column;
      gap: 0.5rem;
      padding: 1rem 1.5rem;
      text-align: center;
    }
  }
</style>
