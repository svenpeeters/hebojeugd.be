  { label: 'Cookie Policy', href: '#' },
  { label: 'Privacy Policy', href: '#' },
  { label: 'Gedragscode', href: '#' },
];
---

<footer class="footer-full">
  <div class="footer-full__container">
    <!-- Left Section -->
    <div class="footer-full__left">
      <!-- Brand -->
      <div class="footer-full__brand">
        <img src="/logo.png" alt="HEBO Jeugd" class="footer-full__logo" />
        <div class="footer-full__info">
          <p class="footer-full__club-name">VC HEBO Jeugd</p>
          <p class="footer-full__club-address">Raes van Heerslaan</p>
          <p class="footer-full__club-address">3870 Heers</p>
        </div>
      </div>

      <!-- Link Columns -->
      <div class="footer-full__columns">
        {footerColumns.map(column => (
          <div class="footer-full__column">
            <h4>{column.title}</h4>
            <ul>
              {column.links.map(link => (
                <li><a href={link.href}>{link.label}</a></li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Socials -->
      <div class="footer-full__social-section">
        <p class="footer-full__social-label">Volg ons</p>
        <div class="footer-full__social-icons">
