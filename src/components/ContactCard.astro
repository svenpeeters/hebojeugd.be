---
interface Props {
  title: string;
  description: string;
  buttonText: string;
  buttonHref: string;
  imageSrc: string;
  imageAlt: string;
}

const { title, description, buttonText, buttonHref, imageSrc, imageAlt } = Astro.props;
---

<div class="contact-card">
  <div class="contact-card__info">
    <h3 class="contact-card__title">{title}</h3>
    <p class="contact-card__text">{description}</p>
    <a href={buttonHref} class="contact-card__button">{buttonText}</a>
  </div>
  <div class="contact-card__figure">
    <div class="contact-card__figure-inner">
      <img src={imageSrc} alt={imageAlt} class="contact-card__avatar" />
    </div>
  </div>
</div>

<style>
  .contact-card {
    background: #f5f5f5;
    color: #1a1a1a;
    padding: 2.5rem;
    border-radius: 1.5rem;
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 2rem;
    align-items: center;
    max-width: 700px;
  }

  .contact-card__info {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 1rem 0;
  }

  .contact-card__title {
    font-size: 1.3rem;
    font-weight: 800;
    color: #c8202f;
    margin: 0 0 0.75rem;
  }

  .contact-card__text {
    font-size: 1rem;
    color: #666;
    margin: 0 0 1.25rem;
    line-height: 1.6;
  }

  .contact-card__button {
    display: inline-block;
    background: #1e3264;
    color: #fff;
    padding: 0.75rem 1.5rem;
    text-decoration: none;
    font-weight: 700;
    border-radius: 4px;
    transition: all 0.3s ease;
    align-self: flex-start;
  }

  .contact-card__button:hover {
    background: #c8202f;
  }

  .contact-card__figure {
    align-self: stretch;
    overflow: visible;
    margin: -2.5rem -2.5rem -2.5rem 0;
    display: flex;
    align-items: flex-end;
  }

  .contact-card__figure-inner {
    overflow: hidden;
    margin-top: -60px;
  }

  .contact-card__avatar {
    height: 340px;
    width: auto;
    object-fit: contain;
    display: block;
  }

  @media (max-width: 768px) {
    .contact-card {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .contact-card__info {
      align-items: center;
    }

    .contact-card__button {
      align-self: center;
    }

    .contact-card__figure {
      margin: 0;
      justify-content: center;
    }

    .contact-card__figure-inner {
      margin-top: 0;
    }

    .contact-card__avatar {
      height: 200px;
    }
  }
</style>
